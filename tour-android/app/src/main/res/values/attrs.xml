<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  自定义圆形图片 -->
    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension"/>
        <attr name="border_inside_color" format="color"/>
        <attr name="border_outside_color" format="color"/>
    </declare-styleable>

    <!-- 地图自定义 -->
    <declare-styleable name="MapView">
        <attr name="marker_width" format="dimension" />
        <attr name="marker_height" format="dimension" />
        <attr name="marker_anim_duration" format="integer" />
    </declare-styleable>
    <!-- 自定义底部属性 -->
    <declare-styleable name="SlideBottomLayout">
        <attr name="handler_height" format="dimension"></attr>
    </declare-styleable>

    <declare-styleable name="DynamicSoreView">
        <!--设置选中点-->
        <attr name="SoreRadioSelect" format="reference" />
        <!--设置最未选中点-->
        <attr name="SoreRadioUnselected" format="reference" />
        <!--设置圆点间距-->
        <attr name="SoreDistance" format="integer" />
        <!--设置每页显示几个-->
        <attr name="SoreNumber" format="integer" />
        <!--设置布局-->
        <attr name="SoreViewLayout" format="reference" />
        <!--设置默认显示页-->
        <attr name="SoreViewDefault" format="reference" />
    </declare-styleable>

    <!--标签-->
    <declare-styleable name="HotTagView">
        <attr name="background_color" format="color" />
        <attr name="line_color" format="color" />
        <attr name="stroke_width" format="dimension" />

        <attr name="text_size" format="dimension"></attr>
        <attr name="text_color" format="color"></attr>

        <attr name="textview_margin_left" format="dimension"></attr>
        <attr name="textview_margin_right" format="dimension"></attr>
        <attr name="textview_margin_top" format="dimension"></attr>
        <attr name="textview_margin_bottom" format="dimension"></attr>
        <attr name="textview_margin" format="dimension"></attr>

        <attr name="textview_padding_left" format="dimension"></attr>
        <attr name="textview_padding_right" format="dimension"></attr>
        <attr name="textview_padding_top" format="dimension"></attr>
        <attr name="textview_padding_bottom" format="dimension"></attr>
        <attr name="textview_padding" format="dimension"></attr>
    </declare-styleable>



    <!--自定义ViewPager+fragment实现-->
    <declare-styleable name="EasyNavigationBar">
        <!--底部导航栏高度-->
        <attr name="Easy_layoutId" format="reference" />
        <!--底部导航栏高度-->
        <attr name="Easy_navigationHeight" format="dimension" />
        <!--底部导航栏背景-->
        <attr name="Easy_navigationBackground" format="color" />
        <!--Tab字体大小-->
        <attr name="Easy_tabTextSize" format="dimension" />
        <!--Tab文字距Tab图标的距离-->
        <attr name="Easy_tabTextTop" format="dimension" />
        <!--Tab图标大小-->
        <attr name="Easy_tabIconSize" format="dimension" />
        <!--Tab未选中字体颜色-->
        <attr name="Easy_tabNormalColor" format="color" />
        <!--Tab选中字体颜色-->
        <attr name="Easy_tabSelectColor" format="color" />
        <!--提示红点的大小-->
        <attr name="Easy_hintPointSize" format="dimension" />
        <!--消息红点的大小-->
        <attr name="Easy_msgPointSize" format="dimension" />
        <!--提示红点距Tab图标的距离-->
        <attr name="Easy_hintPointLeft" format="dimension" />
        <!--消息红点距Tab图标的距离-->
        <attr name="Easy_msgPointLeft" format="dimension" />
        <!--提示红点距离顶部的距离-->
        <attr name="Easy_hintPointTop" format="dimension" />
        <!--消息红点距顶部的距离-->
        <attr name="Easy_msgPointTop" format="dimension" />
        <!--消息红点数字字体大小-->
        <attr name="Easy_msgPointTextSize" format="dimension" />
        <!--分割线高度-->
        <attr name="Easy_lineHeight" format="dimension" />
        <!--分割线颜色-->
        <attr name="Easy_lineColor" format="color" />

        <!--是否有paddingBottom-->
        <attr name="Easy_hasPadding" format="boolean"/>


        <!--中间图片的大小-->
        <attr name="Easy_addIconSize" format="dimension" />
        <!--底部导航栏和加号的高度  加号会居中-->
        <attr name="Easy_addLayoutHeight" format="dimension" />
        <!--添加按钮距离底部的距离-->
        <attr name="Easy_addLayoutBottom" format="dimension"/>
        <!--图标显示-->
        <attr name="Easy_scaleType">
            <flag name="CENTER_INSIDE" value="0" />
            <flag name="CENTER_CROP" value="1" />
            <flag name="CENTER" value="2" />
            <flag name="FIT_CENTER" value="3" />
            <flag name="FIT_END" value="4" />
            <flag name="FIT_START" value="5" />
            <flag name="FIT_XY" value="6" />
            <flag name="MATRIX" value="7" />
        </attr>


        <!--图标显示-->
        <attr name="Easy_addLayoutRule">
            <flag name="RULE_CENTER" value="0" />
            <flag name="RULE_BOTTOM" value="1" />
        </attr>
        <!-- true 点击加号切换fragment
         false 点击加号不切换fragment进行其他操作（跳转界面等）-->
        <attr name="Easy_addAsFragment" format="boolean"/>
        <attr name="Easy_addSelectTextColor" format="color"/>
        <attr name="Easy_addNormalTextColor" format="color"/>
        <attr name="Easy_addTextSize" format="dimension"/>
        <!--加号文字距离顶部加号的距离-->
        <attr name="Easy_addTextTopMargin" format="dimension"/>
        <!--是否和其他tab文字底部对齐-->
        <attr name="Easy_addAlignBottom" format="boolean"/>



    </declare-styleable>




    <!--corner_color 边角颜色，
        scanner_color 扫描线颜色
        possible_result_color 扫描点颜色
        frame_color 扫描框边线颜色
        mask_color 模糊区域颜色
        label_text  框上方提示
    -->
    <declare-styleable name="ViewfinderView">
        <attr name="corner_color" format="color"/>
        <attr name="laser_color" format="color"/>
        <attr name="frame_color" format="color" />
        <attr name="mask_color" format="color" />
        <attr name="result_point_color" format="color"/>
        <attr name="result_color" format="color" />
        <attr name="label_text_color" format="color"/>
        <attr name="label_text" format="string"/>
        <attr name="label_text_size" format="float"/>
    </declare-styleable>

    <!-- 电子导览列表界面的banner样式定义 -->
    <declare-styleable name="BannerLayout">
        <attr name="interval" format="integer"/>
        <attr name="showIndicator" format="boolean"/>
        <attr name="orientationBanner" format="enum"/>
        <attr name="autoPlaying" format="boolean"/>
        <attr name="itemSpace" format="integer"/>
        <attr name="centerScale" format="float"/>
        <attr name="moveSpeed" format="float"/>
    </declare-styleable>
    <declare-styleable name="PileLayout">
        <attr name="PileLayout_vertivalSpace" format="dimension"/>
        <attr name="PileLayout_pileWidth" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="RoundRelativeLayout">
        <attr name="r_radius" format="dimension" />
    </declare-styleable>
    <!-- 末行对齐方式 -->
    <declare-styleable name="AlignTextView">
        <attr name="align" format="enum">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
    </declare-styleable>
    <!-- 圆形进度条 -->
    <declare-styleable name="CircularProgressView">
        <attr name="backWidth" format="dimension" />    <!--背景圆环宽度-->
        <attr name="progWidth" format="dimension" />    <!--进度圆环宽度-->
        <attr name="backColor" format="color" />        <!--背景圆环颜色-->
        <attr name="progColor" format="color" />        <!--进度圆环颜色-->
        <attr name="progStartColor" format="color" />   <!--进度圆环开始颜色-->
        <attr name="progFirstColor" format="color" />   <!--进度圆环结束颜色-->
        <attr name="progress" format="integer" />       <!--圆环进度-->
    </declare-styleable>
</resources>