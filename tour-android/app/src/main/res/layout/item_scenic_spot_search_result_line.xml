<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="item"
            type="cn.xmzt.www.selfdrivingtools.bean.WisdomGuideInfo.ItemsBean"/>
    </data>
    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <ImageView
            android:id="@+id/item_scenic_spot_search_result_line_iv"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_13"
            android:visibility="invisible"
            android:src="@drawable/search"
            />
        <ImageView
            android:id="@+id/item_scenic_spot_search_result_line_iv1"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:src="@drawable/icon_hotel_local"
            />

        <TextView
            android:id="@+id/item_scenic_spot_search_result_line_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="36个景区"
            android:textSize="@dimen/text_size_14"
            android:layout_centerVertical="true"
            android:textColor="@color/color_999999"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_16"
            android:drawablePadding="@dimen/dp_11"
            android:drawableRight="@drawable/right_arrow"
            />
        <TextView
            android:id="@+id/item_scenic_spot_search_result_line_keywords_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_scenic_spot_search_result_line_iv"
            android:text="宝鸡"
            android:textSize="@dimen/text_size_16"
            android:layout_centerVertical="true"
            android:textColor="@color/color_333333"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_toLeftOf="@+id/item_scenic_spot_search_result_line_num_tv"
            />
    </RelativeLayout>
</layout>