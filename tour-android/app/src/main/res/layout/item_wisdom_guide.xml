<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="cn.xmzt.www.selfdrivingtools.bean.WisdomGuideInfo" />

        <variable
            name="info"
            type="cn.xmzt.www.selfdrivingtools.bean.WisdomGuideInfo.ItemsBean" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/item_wisdom_guide_bg"
        >
        <ImageView
            android:id="@+id/item_special_ticket_hot_img_iv"
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_90"
            android:background="@color/color_FF_FF_FF"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/item_top_left_tv"
            android:text="68个讲解点"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_11"
            android:textColor="@color/color_FF_FF_FF"
            android:gravity="center"
            android:layout_alignTop="@+id/item_special_ticket_hot_img_iv"
            android:background="@drawable/item_wisdom_guide_left_top_bg"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/item_special_ticket_hot_img_iv"
            android:layout_marginLeft="@dimen/size_12"
            >
            <TextView
                android:id="@+id/item_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/color_333333"
                android:textStyle="bold"
                android:text="东江湖风景区"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/dp_8"
                />

            <TextView
                android:id="@+id/item_level_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/color_49_BE_FF"
                android:textStyle="bold"
                android:text="【5A】"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_toRightOf="@+id/item_title_tv"
                android:layout_marginTop="@dimen/dp_8"
                />
            <TextView
                android:id="@+id/item_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/color_999999"
                android:text="长沙市宁乡县黄材镇黄材大道"
                android:layout_below="@+id/item_title_tv"
                android:layout_marginTop="@dimen/dp_3"
                />
            <TextView
                android:id="@+id/item_play_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_6"
                android:text="播放量：999次"
                android:textSize="@dimen/text_size_11"
                android:textColor="@color/color_999999"
                android:drawableLeft="@drawable/wisdom_guide_oplay_icon"
                android:drawablePadding="@dimen/size_3"
                />
            <TextView
                android:id="@+id/item_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_6"
                android:layout_alignParentRight="true"
                android:text="距离2.3km"
                android:textSize="@dimen/text_size_11"
                android:textColor="@color/color_999999"
                android:drawableLeft="@drawable/wisdom_guide_address_icon"
                android:drawablePadding="@dimen/size_3"
                />
        </RelativeLayout>
    </RelativeLayout>
</layout>