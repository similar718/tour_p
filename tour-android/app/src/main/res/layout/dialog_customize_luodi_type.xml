<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_route_pick_detail_bg"
        >
        <RelativeLayout
            android:id="@+id/rl_top_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否落地"
                android:textSize="@dimen/dp_16"
                android:textColor="@color/color_333333"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_line_1"
            android:background="@color/color_f4f4f4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1_px"
            android:layout_below="@+id/rl_top_title"
            />
        <RelativeLayout
            android:id="@+id/rl_no_leader"
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_line_1"
            android:layout_height="@dimen/dp_46"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_9">
            <TextView
                android:id="@+id/tv_no_leader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="落地自驾"
                android:textSize="@dimen/dp_16"
                android:textColor="@color/color_24A4FF"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/iv_no_leader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dialog_customize_leader_type_choice"
                android:padding="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_line_2"
            android:background="@color/color_f4f4f4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1_px"
            android:layout_below="@+id/rl_no_leader"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            />
        <RelativeLayout
            android:id="@+id/rl_leader"
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_line_2"
            android:layout_height="@dimen/dp_46"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_9">
            <TextView
                android:id="@+id/tv_leader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自己爱车"
                android:textSize="@dimen/dp_16"
                android:textColor="@color/color_999999"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/iv_leader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dialog_customize_leader_type_choice"
                android:padding="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />
        </RelativeLayout>
    </RelativeLayout>
</layout>