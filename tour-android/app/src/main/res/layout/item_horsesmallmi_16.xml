<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>
    <LinearLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="前天 10：09"
                android:textColor="@color/color_FF_FF_FF"
                android:textSize="@dimen/text_size_12"
                android:drawableLeft="@drawable/horsesmallmi_time_icon"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp_5"
                />
            <ImageView
                android:id="@+id/iv_filter"
                android:layout_width="@dimen/dp_59"
                android:layout_height="@dimen/dp_27"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_mxm_filter_down"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/tv_all_read"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/horse_small_mi_all_read_icon"
                android:layout_alignBottom="@+id/iv_filter"
                android:layout_alignTop="@+id/iv_filter"
                android:text="全部标为已读"
                android:textSize="@dimen/text_size_12"
                android:drawablePadding="@dimen/dp_3"
                android:layout_toLeftOf="@+id/iv_filter"
                android:layout_marginRight="@dimen/dp_20"
                android:gravity="center"
                android:textColor="@color/color_FF_FF_FF"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_horsesmallmi_content_bg"
            android:layout_marginTop="@dimen/dp_10">
            <TextView
                android:id="@+id/item_message_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最新活动"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/color_666666"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/horsesmallmi_activity_icon"
                />

            <ImageView
                android:id="@+id/iv_not_read"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_6"
                android:src="@drawable/item_horsesmallmi_notread_bg"
                android:layout_toRightOf="@+id/item_message_type"
                android:layout_marginLeft="@dimen/dp_6"
                />

            <ImageView
                android:id="@+id/item_message_activity_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/horsesmallmi_16_bg"
                android:layout_below="@+id/item_message_type"
                android:layout_marginTop="@dimen/dp_16"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/item_message_activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="抽奖活动"
                android:textSize="@dimen/text_size_17"
                android:textColor="@color/color_333333"
                android:layout_below="@+id/item_message_activity_image"
                android:layout_marginTop="@dimen/dp_16"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/item_message_activity_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分满100就可获得每天一次的抽奖机会，可免费 拿ipad，最低获得30积分！"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/color_999999"
                android:layout_below="@+id/item_message_activity_title"
                android:layout_marginTop="@dimen/dp_6"
                />
        </RelativeLayout>
    </LinearLayout>
</layout>