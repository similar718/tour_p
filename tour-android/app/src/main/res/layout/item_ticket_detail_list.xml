<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_14"
    android:layout_marginBottom="@dimen/size_14"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="@dimen/dp_64"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        >
        <LinearLayout
            android:id="@+id/rl_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_special_ticket_must_play_name_tv"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FF6000"
                android:text="￥"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_10"
                />
            <TextView
                android:id="@+id/item_ticket_detail_list_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FF6000"
                android:textSize="@dimen/text_size_20"
                android:text="399"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_99_99_99"
                android:text="起"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_10"
                android:layout_marginLeft="@dimen/size_3"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/item_ticket_detail_list_yuding_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_price"
            android:layout_marginTop="@dimen/dp_8"
            android:text="预定"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/color_FF_FF_FF"
            android:background="@drawable/item_ticket_detail_list_yuding_bg"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_70"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/item_ticket_detail_list_left_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_12"
                android:textColor="@color/color_FF_FF_FF"
                android:layout_centerVertical="true"
                android:text="热销"
                android:background="@drawable/item_ticket_detail_list_left_txt_bg"
                />
            <TextView
                android:id="@+id/item_ticket_detail_list_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="华侨城6月10日-28日国际啤酒节"
                android:layout_toRightOf="@+id/item_ticket_detail_list_left_tv"
                android:layout_marginLeft="@dimen/size_14"
                android:layout_centerVertical="true"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_16"
                android:singleLine="true"
                android:ellipsize="end"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/item_ticket_detail_list_second_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_9"
            android:text="啤酒节"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_16"
           />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            >
            <TextView
                android:id="@+id/item_ticket_detail_list_yuding_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10日之前可定"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/color_66_66_66"
                />
            <TextView
                android:id="@+id/item_ticket_detail_list_tjt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_toRightOf="@+id/item_ticket_detail_list_yuding_time_tv"
                android:text="条件退"
                android:layout_marginLeft="@dimen/size_13"
                android:textColor="@color/color_FC_B6_4C"
                android:background="@drawable/item_ticket_detail_list_tjt_bg"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_ticket_detail_list_yuding_time_tv"
                android:text="条件退"
                android:layout_marginLeft="@dimen/size_13"
                android:textColor="@color/color_49_BE_FF"
                android:background="@drawable/item_ticket_detail_list_sht_bg"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            >
            <TextView
                android:id="@+id/item_ticket_detail_list_ru_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预定成功后2小时可入园"
                android:textColor="@color/color_99_99_99"
                android:textSize="@dimen/text_size_12"
                />
            <TextView
                android:id="@+id/item_ticket_detail_list_ru_read_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_ticket_detail_list_ru_tv"
                android:text="订票须知"
                android:textColor="@color/color_99_99_99"
                android:textSize="@dimen/text_size_12"
                android:layout_marginLeft="@dimen/size_16"
                android:drawableRight="@drawable/ticket_detail_right_icon"
                android:drawablePadding="@dimen/dp_8"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>