<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>
    <LinearLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="前天 10：09"
                android:textColor="@color/color_FF_FF_FF"
                android:textSize="@dimen/text_size_12"
                android:drawableLeft="@drawable/horsesmallmi_time_icon"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp_5"
                />
            <ImageView
                android:id="@+id/iv_filter"
                android:layout_width="@dimen/dp_59"
                android:layout_height="@dimen/dp_27"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_mxm_filter_down"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/tv_all_read"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/horse_small_mi_all_read_icon"
                android:layout_alignBottom="@+id/iv_filter"
                android:layout_alignTop="@+id/iv_filter"
                android:text="全部标为已读"
                android:textSize="@dimen/text_size_12"
                android:drawablePadding="@dimen/dp_3"
                android:layout_toLeftOf="@+id/iv_filter"
                android:layout_marginRight="@dimen/dp_20"
                android:gravity="center"
                android:textColor="@color/color_FF_FF_FF"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_horsesmallmi_content_bg"
                android:layout_marginTop="@dimen/dp_10">
                <TextView
                    android:id="@+id/item_message_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行程动态"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/color_666666"
                    android:drawablePadding="@dimen/dp_6"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/horsesmallmi_xcdt_icon" />
                <ImageView
                    android:id="@+id/iv_not_read"
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_6"
                    android:src="@drawable/item_horsesmallmi_notread_bg"
                    android:layout_toRightOf="@+id/item_message_type"
                    android:layout_marginLeft="@dimen/dp_6"
                    />
                <LinearLayout android:id="@+id/tag_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_message_type"
                    android:layout_marginTop="@dimen/dp_18"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_3"
                        android:paddingBottom="@dimen/dp_3"
                        android:paddingLeft="@dimen/dp_12"
                        android:paddingRight="@dimen/dp_12"
                        android:background="@drawable/shape_blue_radius_100"
                        android:text="重要"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/item_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车辆检查指南"
                        android:textSize="@dimen/text_size_20"
                        android:textColor="@color/color_333333"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:layout_below="@+id/item_message_type"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行程即将出发，如果是驾驶自己爱车出游，请在出行前，检查好自己的爱车，特献上检查指南一份，仅供参考！"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/color_333333"
                    android:layout_below="@+id/tag_layout"
                    android:layout_marginTop="@dimen/dp_6"
                    />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_32"
                    android:layout_below="@+id/item_content"/>
                <LinearLayout
                    android:id="@+id/trip_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_16">

                    <TextView
                        android:id="@+id/tv_trip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:text="行程"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/text_size_12" />
                    <TextView
                        android:id="@+id/tv_trip_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="西藏落地自驾10日游"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_14"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/trip_info_tv"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/trip_go_date_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/trip_layout"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_12">
                    <TextView
                        android:id="@+id/tv_trip_go"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出发日期"
                        android:ems="4"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/text_size_12"/>
                    <TextView
                        android:id="@+id/tv_trip_go_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019-11-01"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_14"
                        android:layout_toRightOf="@+id/trip_go_tv"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/all_length_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/trip_go_date_layout"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_12">
                    <TextView android:id="@+id/tv_all_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总里程"
                        android:ems="4"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/text_size_12"/>
                    <TextView
                        android:id="@+id/tv_all_length_v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="约1560KM"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_14"
                        android:layout_toRightOf="@+id/trip_go_tv"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </RelativeLayout>
            <ImageView
                android:id="@+id/item_into_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/rl"
                android:layout_alignParentRight="true"
                android:src="@drawable/horsesmallmi_into_icon"
                android:padding="@dimen/dp_18"
                />
        </RelativeLayout>
    </LinearLayout>
</layout>