<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>
    <LinearLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="前天 10：09"
                android:textColor="@color/color_FF_FF_FF"
                android:textSize="@dimen/text_size_12"
                android:drawableLeft="@drawable/horsesmallmi_time_icon"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp_5"
                />
            <ImageView
                android:id="@+id/iv_filter"
                android:layout_width="@dimen/dp_59"
                android:layout_height="@dimen/dp_27"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_mxm_filter_down"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/tv_all_read"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/horse_small_mi_all_read_icon"
                android:layout_alignBottom="@+id/iv_filter"
                android:layout_alignTop="@+id/iv_filter"
                android:text="全部标为已读"
                android:textSize="@dimen/text_size_12"
                android:drawablePadding="@dimen/dp_3"
                android:layout_toLeftOf="@+id/iv_filter"
                android:layout_marginRight="@dimen/dp_20"
                android:gravity="center"
                android:textColor="@color/color_FF_FF_FF"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_horsesmallmi_content_bg"
                android:layout_marginTop="@dimen/dp_10">
                <TextView
                    android:id="@+id/item_message_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单消息"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/color_666666"
                    android:drawablePadding="@dimen/dp_6"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/horsesmallmi_order_icon"
                    />

                <ImageView
                    android:id="@+id/iv_not_read"
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_6"
                    android:src="@drawable/item_horsesmallmi_notread_bg"
                    android:layout_toRightOf="@+id/item_message_type"
                    android:layout_marginLeft="@dimen/dp_6"
                    />

                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款失败"
                    android:textSize="@dimen/text_size_20"
                    android:textColor="@color/color_333333"
                    android:layout_below="@+id/item_message_type"
                    android:layout_marginTop="@dimen/dp_18"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/item_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您好，您的退款申请失败了！\n如有疑问，请咨询400-666-1235"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/color_333333"
                    android:layout_below="@+id/item_title"
                    android:layout_marginTop="@dimen/dp_6"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_32"
                    android:layout_below="@+id/item_content"/>
                <RelativeLayout
                    android:id="@+id/order_1_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_content"
                    android:layout_marginTop="@dimen/dp_16">
                    <TextView
                        android:id="@+id/tv_order_1_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="行程名称"
                        android:ems="4"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/text_size_12"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_order_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="西藏落地自驾10日游"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_14"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_order_1_key"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:textStyle="bold"
                        android:singleLine="true"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/order_2_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_1_layout"
                    android:layout_marginTop="@dimen/dp_12">
                    <TextView
                        android:id="@+id/tv_order_2_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出发日期"
                        android:ems="4"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/text_size_12"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_order_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019-11-01"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_14"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_order_2_key"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:textStyle="bold"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/order_3_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_2_layout"
                    android:layout_marginTop="@dimen/dp_12">
                    <TextView
                        android:id="@+id/tv_order_3_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单号"
                        android:ems="4"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/text_size_12"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_order_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1657962200546"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_14"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_order_3_key"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:textStyle="bold"
                        />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/order_4_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_3_layout"
                    android:layout_marginTop="@dimen/dp_12">
                    <TextView
                        android:id="@+id/tv_order_4_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="退款金额"
                        android:ems="4"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/text_size_12"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_order_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1650.00元"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_14"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_order_4_key"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:textStyle="bold"
                        />
                </RelativeLayout>

            </RelativeLayout>
            <ImageView
                android:id="@+id/item_into_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/rl"
                android:layout_alignParentRight="true"
                android:src="@drawable/horsesmallmi_into_icon"
                android:padding="@dimen/dp_19"
                />
        </RelativeLayout>
    </LinearLayout>
</layout>