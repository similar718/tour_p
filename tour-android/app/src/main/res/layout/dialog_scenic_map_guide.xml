<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
    </data>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_000000_30">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_387"
            android:background="@drawable/dialog_bg"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/dialog_scenic_map_guide_img_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_260" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_26">
                <ImageView
                    android:id="@+id/icon_iv"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_17"
                    android:src="@drawable/dialog_scenic_map_guide_address_icon"
                    />
                <TextView
                    android:id="@+id/dialog_scenic_map_guide_address_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/icon_iv"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:text="湖南省株洲市云龙示范区云龙大道大头村 309弄46组"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/color_999999"
                    android:gravity="top|left"
                    android:layout_gravity="top|left"
                    />
            </RelativeLayout>
            <ImageView
                android:id="@+id/dialog_scenic_map_guide_btn_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_13"
                android:src="@drawable/dialog_scenic_map_guide_btn"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/dialog_cancel_iv"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:src="@drawable/dialog_scenic_cancel"
            android:padding="@dimen/dp_20"
            />
    </LinearLayout>

</RelativeLayout>
</layout>