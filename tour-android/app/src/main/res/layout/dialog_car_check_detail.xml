<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检查方法要点"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_17"
            android:textStyle="bold"
            android:drawableLeft="@drawable/dialog_car_check_icon_title_icon"
            android:layout_centerHorizontal="true"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_20"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            />

        <TextView
            android:id="@+id/tv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@+id/tv_title"
            android:text="检查标准"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/color_666666"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_check_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_below="@+id/tv_check"
            android:text="油量应在机油尺上限与下限刻度范围内"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/color_666666"
            />

        <TextView
            android:id="@+id/tv_check_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@+id/tv_check_content"
            android:text="检查方法要点"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/color_666666"
            android:textStyle="bold"
            />

        <cn.xmzt.www.view.AlignTextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1、未发动引擎前抽出机油尺检查油量，不足者应添加，但不得超过上限刻度。\n2、检查机油油质是否正常，若有异水电费公司应予换新。\n3、添注机油后应稍等约五分钟后再检视油尺方为正常(不可立即抽出机油尺检视，以免受假相所蒙而多加)。\n4、检查有否泄漏机油状况，有者应予修理。"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_below="@+id/tv_check_main"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:lineSpacingExtra="@dimen/dp_4"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_14"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_below="@+id/tv_content"
            android:weightSum="2"
            android:layout_margin="@dimen/dp_30"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_pre"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="上一条"
                android:layout_marginRight="@dimen/dp_18"
                android:textColor="@color/color_FF_FF_FF"
                android:textSize="@dimen/text_size_17"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/marker_shared_navigation_map_car_info_offline_bg"
                />
            <TextView
                android:id="@+id/tv_next"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="下一条"
                android:layout_marginLeft="@dimen/dp_18"
                android:textColor="@color/color_FF_FF_FF"
                android:textSize="@dimen/text_size_17"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/shape_rectangle_blue_radius_4"
                />
        </LinearLayout>
    </RelativeLayout>
</layout>