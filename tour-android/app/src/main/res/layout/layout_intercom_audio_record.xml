<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">


    <LinearLayout
        android:id="@+id/ll_audio_record"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/shape_rectangle_white_shadow"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@drawable/ic_chat_record_status_1" />

        <Chronometer
            android:id="@+id/timer_audio_record"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_18"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:text="@string/timer_default"
            android:textColor="@color/color_49_BE_FF"
            android:textSize="@dimen/text_size_11" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:src="@drawable/ic_chat_record_status_2" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_audio_record"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_72"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/style_btn_audio_record"
        android:visibility="visible" />

</LinearLayout>