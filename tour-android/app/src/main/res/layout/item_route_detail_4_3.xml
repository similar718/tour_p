<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <LinearLayout android:id="@+id/timeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="0dp"
                android:includeFontPadding="false"
                android:gravity="center"
                android:text="01"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="0dp"
                android:includeFontPadding="false"
                android:gravity="center"
                android:text="DAY"
                android:textColor="#999999"
                android:textSize="5sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/dotImg1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:scaleType="centerInside"
            android:layout_toRightOf="@+id/timeLayout"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_route_xc_4"/>
        <TextView
            android:id="@+id/tvTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dotImg1"
            android:minLines="1"
            android:paddingLeft="8dp"
            android:textStyle="bold"
            android:textColor="@color/color_33_33_33"
            android:textSize="@dimen/size_14"
            tools:text="餐点" />
        <LinearLayout android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_time_line"
            android:layout_toRightOf="@+id/dotImg1"
            android:layout_marginLeft="-11dp"
            android:paddingBottom="16dp"
            android:paddingLeft="18dp"
            android:layout_below="@+id/tvTitle1">
            <cn.xmzt.www.view.labeltext.LabelTextView
                android:id="@+id/tvLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_33_33_33"
                android:textSize="14sp"
                app:labelText="早"
                tools:originalText="自理"
                app:labelFillColor="true"
                app:labelMargin="10dp"
                app:labelStrokeRadius="4dp"
                app:labelPaddingHorizontal="4dp"
                app:labelStrokeColor="#F5F5F5"
                app:labelStrokeWidth="1dp"
                app:labelTextColor="#999999"
                app:labelTextSize="14sp" />
            <cn.xmzt.www.view.labeltext.LabelTextView
                android:id="@+id/tvLabe2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_33_33_33"
                android:textSize="14sp"
                app:labelText="中"
                tools:originalText="自理"
                app:labelFillColor="true"
                app:labelMargin="10dp"
                app:labelStrokeRadius="4dp"
                app:labelPaddingHorizontal="4dp"
                app:labelStrokeColor="#F5F5F5"
                app:labelStrokeWidth="1dp"
                app:labelTextColor="#999999"
                app:labelTextSize="14sp" />
            <cn.xmzt.www.view.labeltext.LabelTextView
                android:id="@+id/tvLabe3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_33_33_33"
                android:textSize="14sp"
                app:labelText="晚"
                tools:originalText="自理"
                app:labelFillColor="true"
                app:labelMargin="10dp"
                app:labelStrokeRadius="4dp"
                app:labelPaddingHorizontal="4dp"
                app:labelStrokeColor="#F5F5F5"
                app:labelStrokeWidth="1dp"
                app:labelTextColor="#999999"
                app:labelTextSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
</layout>
