<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_64"
        android:background="@drawable/shared_navigation_infowindow_person_bg1"
        android:layout_centerHorizontal="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/dp_58">
        <TextView
            android:id="@+id/infowindow_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="离线"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_FF_FF_FF"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_9"
            android:background="@drawable/infowindow_shared_navigation_map_offline_type_bg"
            />

        <TextView
            android:id="@+id/maker_nick_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="134****1206"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/color_999999"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_toRightOf="@+id/infowindow_type_tv"
            android:singleLine="true"
            android:ellipsize="end"
            android:textStyle="bold"
            />
        <LinearLayout
            android:id="@+id/rl_update_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_11"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_below="@+id/infowindow_type_tv"
            >
            <TextView
                android:id="@+id/tv_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2分钟前更新"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/color_999999"
                android:layout_toRightOf="@+id/tv_update_line"
                android:singleLine="true"
                android:ellipsize="end"
                />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>