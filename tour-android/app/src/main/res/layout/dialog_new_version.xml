<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/new_version_updata_top_bg">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_110"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/color_33_33_33"
                android:text="发现新版本"/>
            <TextView
                android:id="@+id/tvVersionTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_centerHorizontal="true"
                android:background="@drawable/dialog_new_version_tg_bg"
                android:layout_below="@+id/tvTitle"
                android:layout_marginTop="@dimen/dp_4"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                tools:text="V1.6.0"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:layout_marginTop="-2dp"
            android:background="@color/white">
            <TextView
                android:id="@+id/tvHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="14sp"
                android:textColor="@color/color_99_99_99"
                android:text="又有新的版本了哦，赶紧尝鲜活体验吧！"/>
            <TextView
                android:layout_width="@dimen/dp_58"
                android:layout_height="4dp"
                android:layout_alignBottom="@+id/tv_update_content"
                android:background="#24A4FF"/>
            <TextView
                android:id="@+id/tv_update_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHint"
                android:layout_marginLeft="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/color_33_33_33"
                android:text="更新内容"/>
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_below="@+id/tv_update_content"
                android:layout_marginTop="@dimen/dp_12"
                android:textSize="14sp"
                android:textColor="@color/title_color"
                tools:text="1  优化了已知bug；\n2  新增智能组队功能；\n3  新增加行程管家功能；"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <ImageView android:id="@+id/iv_new_update"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/new_update_icon"
                android:layout_below="@+id/tv_content"
                android:layout_marginTop="@dimen/dp_12"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:background="@drawable/new_version_updata_bottom_bg"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView android:id="@+id/iv_cancel"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/new_update_cancel"/>
        </FrameLayout>
    </LinearLayout>
</layout>