<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="item"
            type="cn.xmzt.www.selfdrivingtools.bean.SettingDestinationBottomBean"/>
        <import type="android.view.View" />
    </data>
    <RelativeLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65"
        android:background="@color/color_FF_FF_FF">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:layout_centerVertical="true"
            android:src="@drawable/setting_destination_search_result_dialog_location_blue_icon"
            android:layout_marginLeft="@dimen/dp_22"
            />

        <TextView
            android:id="@+id/tv_address_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="永丰社区"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/color_333333"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_marginLeft="@dimen/dp_13"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/dp_20"
            />

        <TextView
            android:id="@+id/tv_distance_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/setting_destination_search_result_dialog_distance_icon"
            android:text="1.3km"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_999999"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_3"
            android:drawablePadding="@dimen/dp_2"
            android:layout_below="@+id/tv_address_txt"
            />

        <TextView
            android:id="@+id/tv_address_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="劳动路4-23号附近"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_999999"
            android:layout_toRightOf="@+id/tv_distance_info"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_below="@+id/tv_address_txt"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/dp_20"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1_px"
            android:layout_alignParentBottom="true"
            android:background="@color/color_e5e5e5"
            android:layout_marginLeft="@dimen/dp_22"
            />
    </RelativeLayout>
</layout>