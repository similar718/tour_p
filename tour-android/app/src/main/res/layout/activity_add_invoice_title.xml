<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable
            name="activity"
            type="cn.xmzt.www.route.activity.AddInvoiceTitleActivity" />
        <variable
            name="vm"
            type="cn.xmzt.www.route.vm.AddInvoiceTitleViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F4F4"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/color_FF_FF_FF">

            <ImageView android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_new_back"
                android:onClick="@{activity::onClick}"
                android:layout_centerVertical="true"/>
            <TextView android:id="@+id/tv_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{activity::onClick}"
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="删除"
                android:textColor="@color/color_66_66_66"
                android:textSize="14sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_toRightOf="@+id/iv_back"
                android:layout_toLeftOf="@+id/tv_del"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="新增发票抬头"
                android:textColor="@color/color_33_33_33"
                android:textSize="18sp" />

        </RelativeLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginTop="10dp"
                    android:onClick="@{activity::onClick}"
                    android:gravity="center_vertical"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="抬头类型"
                        android:ems="4"
                        android:textColor="@color/color_33_33_33"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="13dp"
                        android:drawableRight="@drawable/back_gray_right"
                        tools:text="公司"
                        android:text="@{vm.selected==1?vm.typeCompany:vm.typePerson}"
                        android:textColor="@color/color_33_33_33"
                        android:textSize="14sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1_px"
                    android:background="@color/color_line"/>
                <LinearLayout android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="抬头名称"
                        android:ems="4"
                        android:textColor="@color/color_33_33_33"
                        android:textSize="14sp"/>
                    <EditText android:id="@+id/et_company_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:afterTextChanged="@{vm::companyAfterTextChanged}"
                        android:paddingLeft="20dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:hint="请输入公司名称，必填"
                        android:textColorHint="@color/color_999999"
                        android:textColor="@color/color_33_33_33"
                        android:textSize="14sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1_px"
                    android:visibility="@{vm.selected==1?View.VISIBLE:View.GONE}"
                    android:background="@color/color_line"/>
                <LinearLayout android:id="@+id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{vm.selected==1?View.VISIBLE:View.GONE}"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="税号"
                        android:ems="4"
                        android:textColor="@color/color_33_33_33"
                        android:textSize="14sp"/>
                    <EditText android:id="@+id/et_duty_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="20"
                        android:inputType="textVisiblePassword"
                        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:background="@color/white"
                        android:afterTextChanged="@{vm::dutyIdAfterTextChanged}"
                        android:paddingLeft="20dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:hint="请输入纳税人识别号，必填"
                        android:textColorHint="@color/color_999999"
                        android:textColor="@color/color_33_33_33"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout android:id="@+id/layout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="注册地址"
                        android:ems="4"
                        android:textColor="@color/color_33_33_33"
                        android:textSize="14sp"/>
                    <EditText android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:afterTextChanged="@{vm::addressAfterTextChanged}"
                        android:paddingLeft="20dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:hint="选填"
                        android:textColorHint="@color/color_999999"
                        android:textColor="@color/color_33_33_33"
                        android:textSize="14sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1_px"
                    android:background="@color/color_line"/>
                <LinearLayout android:id="@+id/layout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="注册电话"
                        android:ems="4"
                        android:textColor="@color/color_33_33_33"
                        android:textSize="14sp"/>
                    <EditText android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:afterTextChanged="@{vm::phoneAfterTextChanged}"
                        android:paddingLeft="20dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:hint="选填"
                        android:textColorHint="@color/color_999999"
                        android:textColor="@color/color_33_33_33"
                        android:textSize="14sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1_px"
                    android:background="@color/color_line"/>
                <LinearLayout android:id="@+id/layout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开户银行"
                        android:ems="4"
                        android:textColor="@color/color_33_33_33"
                        android:textSize="14sp"/>
                    <EditText android:id="@+id/et_deposit_bank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:afterTextChanged="@{vm::depositBankAfterTextChanged}"
                        android:paddingLeft="20dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:hint="选填"
                        android:textColorHint="@color/color_999999"
                        android:textColor="@color/color_33_33_33"
                        android:textSize="14sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1_px"
                    android:background="@color/color_line"/>
                <LinearLayout android:id="@+id/layout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="银行账号"
                        android:ems="4"
                        android:textColor="@color/color_33_33_33"
                        android:textSize="14sp"/>
                    <EditText android:id="@+id/et_bank_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:afterTextChanged="@{vm::bankAccountAfterTextChanged}"
                        android:paddingLeft="20dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:hint="选填"
                        android:textColorHint="@color/color_999999"
                        android:textColor="@color/color_33_33_33"
                        android:textSize="14sp"/>
                </LinearLayout>

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/tv_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_bg"
                    android:onClick="@{activity::onClick}"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="37dp"
                    android:text="保存"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>