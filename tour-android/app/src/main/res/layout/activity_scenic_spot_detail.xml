<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:expandableTextView="http://schemas.android.com/tools">
    <data>
        <variable
            name="activity"
            type="cn.xmzt.www.selfdrivingtools.activity.ScenicSpotDetailActivity" />
        <variable
            name="model"
            type="cn.xmzt.www.selfdrivingtools.viewmodel.ScenicSpotDetailViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_alignParentBottom="true"
            />
        <!-- 底部banner和数据信息 -->
        <net.jg.framework.view.JudgeNestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="true"
                android:descendantFocusability="blocksDescendants"
                android:fillViewport="true"
                android:scrollbars="none">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_FF_FF_FF"
                    android:orientation="vertical">
                    <!-- 顶部背景 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_110"
                        android:background="@drawable/scenic_detail_top_bg"
                        />
                    <!-- banner控件 -->
                    <com.youth.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_230"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_110"
                        android:background="@drawable/white_gradient_65_0"
                        android:visibility="gone"
                        />
                    <RelativeLayout
                        android:id="@+id/rl_play"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_70"
                        android:layout_marginTop="@dimen/dp_m_20"
                        android:layout_below="@+id/banner"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/scenic_spot_detail_voice_bg"
                        >
                        <ImageView
                            android:id="@+id/iv_play_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/scenic_detail_play_icon"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:onClick="@{activity::onClick}"
                            />
                        <TextView
                            android:id="@+id/tv_stat_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/iv_play_img"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_9"
                            android:textSize="@dimen/dp_11"
                            android:textColor="@color/color_999999"
                            android:text="00:00"
                            />
                        <TextView
                            android:id="@+id/tv_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/dp_11"
                            android:textColor="@color/color_999999"
                            android:layout_marginRight="@dimen/dp_16"
                            android:text="00:00"
                            />
                        <SeekBar
                            android:id="@+id/sb_voice"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_stat_time"
                            android:layout_toLeftOf="@+id/tv_end_time"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:layout_marginRight="@dimen/dp_6"
                            android:max="100"
                            android:progress="0"
                            android:maxHeight="@dimen/dp_4"
                            android:minHeight="@dimen/dp_4"
                            android:padding="@dimen/dp_0"
                            android:progressDrawable="@drawable/seekbar_scenic_spot_detail"
                            android:thumb="@drawable/seekbar_scenic_spot_detail_thumb"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_below="@+id/rl_play"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        >
                        <TextView
                            android:id="@+id/tv_intro_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/scenic_detail_intro_icon"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:text="景区简介"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/text_size_16"
                            android:textStyle="bold"
                            android:drawablePadding="@dimen/dp_3"
                            />
                        <cn.xmzt.www.view.ExpandableMoreTextView
                            android:id="@+id/expand_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_intro_title"
                            android:layout_marginTop="@dimen/dp_12"
                            expandableTextView:animAlphaStart="1"
                            expandableTextView:maxCollapsedLines="8">
                            <TextView
                                android:id="@id/expandable_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="8dp"
                                android:fontFamily="sans-serif-light"
                                android:lineSpacingExtra="@dimen/dp_10"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/text_size_14" />

                            <ImageButton
                                android:id="@id/expand_collapse"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|bottom"
                                android:text="查看全部"
                                android:background="@android:color/transparent"
                                android:padding="16dp" />
                        </cn.xmzt.www.view.ExpandableMoreTextView>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_99"
                            android:visibility="gone"
                            android:background="@drawable/fragment_sience_introduce_gradient"
                            android:layout_alignBottom="@+id/expand_text_view"
                            android:layout_below="@+id/expand_text_view">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="查看全部"
                                android:textColor="@color/color_49_BE_FF"
                                android:drawableRight="@drawable/icon_hotel_search_more"
                                android:textSize="@dimen/text_size_14"
                                android:paddingBottom="@dimen/dp_20"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:drawablePadding="@dimen/dp_6"
                                />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_nearby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_below="@+id/rl_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        >
                        <TextView
                            android:id="@+id/tv_nearby_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/scenic_detail_nearby_icon"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:text="附近景点"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/text_size_16"
                            android:textStyle="bold"
                            android:drawablePadding="@dimen/dp_3"
                            />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_tour_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_nearby_title"
                            android:layout_marginTop="@dimen/dp_12"
                            />
                    </RelativeLayout>
                </RelativeLayout>
            </net.jg.framework.view.JudgeNestedScrollView>
        <!-- 标题栏 -->
        <FrameLayout
            android:id="@+id/fl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/cl_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/transparent">

                <ImageView
                    android:id="@+id/title_back_iv"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="centerInside"
                    android:layout_centerVertical="true"
                    android:onClick="@{activity::onClick}"
                    android:src="@drawable/back_bac"
                    android:layout_marginLeft="10dp"/>
                <!-- 搜索 -->
                <TextView
                    android:id="@+id/title_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_17"
                    android:singleLine="true"
                    android:maxWidth="@dimen/dp_200"
                    android:ellipsize="end"
                    />
                <ImageView
                    android:id="@+id/title_share_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="@dimen/dp_12"
                    android:layout_alignParentRight="true"
                    android:onClick="@{activity::onClick}"
                    android:src="@drawable/scenic_detail_share_icon"
                    />
                <ImageView
                    android:id="@+id/title_image_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="@dimen/dp_12"
                    android:onClick="@{activity::onClick}"
                    android:src="@drawable/scenic_detail_image_icon"
                    android:layout_toLeftOf="@+id/title_share_iv"
                    />
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>
</layout>