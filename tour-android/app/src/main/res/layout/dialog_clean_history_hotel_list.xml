<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="256dp"
        android:layout_height="124dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_white_radius_4"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认清空历史记录？"
            android:textColor="@color/color_33_33_33"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_confirm"
                    android:textColor="@color/color_FF_FF_FF"
                    android:background="@drawable/shape_gray_radius_4"
                    android:layout_width="110dp"
                    android:layout_height="36dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="确定" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_cancel"
                    android:textColor="@color/color_FF_FF_FF"
                    android:background="@drawable/shape_blue_radius_4"
                    android:layout_width="110dp"
                    android:layout_height="36dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="取消" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>