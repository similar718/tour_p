<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
    </data>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/size_10"
            android:paddingRight="@dimen/size_10"
            android:paddingTop="@dimen/size_30"
            android:paddingBottom="@dimen/size_20"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_60"
            android:background="@drawable/default_dialog_shape">

            <TextView
                android:id="@+id/tips_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/title_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_30"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cancel_tv"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_36"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="我在想想"
                    android:textColor="@color/color_24A4FF"
                    android:textSize="@dimen/text_size_17"
                    android:background="@drawable/account_written_off_left_selector"
                    android:layout_marginRight="@dimen/size_6"
                    android:clickable="true"/>


                <TextView
                    android:id="@+id/confirm_tv"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_36"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="注销"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_17"
                    android:background="@drawable/account_written_off_right_selector"
                    android:layout_marginLeft="@dimen/size_6"
                    android:clickable="true"/>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>