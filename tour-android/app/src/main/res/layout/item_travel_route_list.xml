<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nim_touch_bg"
    android:clickable="true"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_travel_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_133"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@drawable/shape_rectangle_white_radius_8">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_110"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:scaleType="fitXY"
            android:src="@drawable/shape_rectangle_gray_radius_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_130"
            android:layout_marginLeft="@dimen/dp_130"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:lines="1"
            android:singleLine="true"
            android:text="海南环岛自驾攻略 | 海南6日游"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_130"
            android:layout_marginLeft="@dimen/dp_130"
            android:layout_marginTop="@dimen/dp_39"
            android:src="@drawable/ic_travel_date"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_147"
            android:layout_marginLeft="@dimen/dp_147"
            android:layout_marginTop="@dimen/dp_37"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:lines="1"
            android:singleLine="true"
            android:text="19.08.12—19.08.26"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_130"
            android:layout_marginLeft="@dimen/dp_130"
            android:layout_marginTop="@dimen/dp_58"
            android:src="@drawable/ic_travel_route"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_147"
            android:layout_marginLeft="@dimen/dp_147"
            android:layout_marginTop="@dimen/dp_55"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:lines="2"
            android:text="张家界-凤凰古城-橘子洲头-岳阳楼-张家-橘子洲头-岳阳楼-张家"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_invite_friends"
            android:layout_width="@dimen/dp_82"
            android:layout_height="@dimen/dp_28"
            android:layout_marginStart="@dimen/dp_147"
            android:layout_marginLeft="@dimen/dp_147"
            android:layout_marginTop="@dimen/dp_95"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/shape_rectangle_orange_radius_4"
            android:drawableStart="@drawable/ic_travel_invite_friends"
            android:drawableLeft="@drawable/ic_travel_invite_friends"
            android:gravity="center"
            android:paddingStart="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:text="邀请好友"
            android:textColor="@color/color_FF_FF_FF"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_group_enter"
            android:layout_width="@dimen/dp_95"
            android:layout_height="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_95"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/shape_rectangle_blue_radius_4"
            android:drawableStart="@drawable/ic_travel_group_enter"
            android:drawableLeft="@drawable/ic_travel_group_enter"
            android:gravity="center"
            android:paddingStart="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:text="进入行程群"
            android:textColor="@color/color_FF_FF_FF"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_voice_playback"
            android:layout_width="@dimen/dp_95"
            android:layout_height="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_95"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/shape_rectangle_blue_radius_4"
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/ic_travel_voice_playback"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <cn.xmzt.www.nim.uikit.common.ui.drop.DropFake
            android:id="@+id/df_unread_number_tip"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_marginRight="6dip"
            android:layout_marginBottom="@dimen/dp_28"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/iv_unread_number_explosion"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginRight="6dip"
            android:layout_marginBottom="@dimen/dp_28"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/iv_msg_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="6dp"
            android:contentDescription="@string/empty"
            android:visibility="visible"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>