<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="activity"
            type="cn.xmzt.www.mine.activity.HorseSmallMiNotificationsActivity" />
    </data>
    <RelativeLayout android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/horse_small_mi_bg"
        android:fitsSystemWindows="false">
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlAccentColor="@color/transparent"
            app:srlPrimaryColor="@color/transparent"
            android:background="@color/transparent">
            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srlAccentColor="@color/white"
                android:background="@color/transparent"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <cn.xmzt.www.view.AutofitRecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/v_line"
                    android:overScrollMode="never"/>
                <TextView
                    android:id="@+id/tv_no_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_144"
                    android:drawablePadding="36dp"
                    android:drawableTop="@drawable/no_message_data"
                    android:gravity="center"
                    android:text="亲，暂无消息记录哦~"
                    android:textColor="@color/color_99_99_99"
                    android:textSize="16sp"/>
            </FrameLayout>
            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srlAccentColor="@color/white"
                android:background="@color/transparent"/>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        <FrameLayout
            android:id="@+id/titleBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0075BCEA">
            <RelativeLayout
                android:id="@+id/layoutToolbar"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:layout_collapseMode="pin">
                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="centerInside"
                    android:layout_centerVertical="true"
                    android:onClick="@{activity::onClick}"
                    android:src="@drawable/back_white"
                    android:layout_marginLeft="10dp"/>
                <FrameLayout android:id="@+id/filterLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="@{activity::onClick}"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:id="@+id/iv_filter"
                        android:layout_width="@dimen/dp_59"
                        android:layout_height="@dimen/dp_27"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_mxm_filter_down"
                        android:layout_marginRight="10dp"/>
                </FrameLayout>

                <TextView android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:text="马小秘提醒"
                    android:layout_toLeftOf="@+id/filterLayout"
                    android:layout_toRightOf="@+id/ivBack"/>
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>
</layout>