<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <FrameLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_blue_white">
        <RelativeLayout android:id="@+id/banner_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_59">

            <cn.xmzt.www.view.banner.HomeBannerLayout
                android:id="@+id/banner_advertise"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_190"
                app:autoPlaying="true"
                app:centerScale="1.125"
                app:itemSpace="10"
                app:moveSpeed="1.0" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@+id/banner_advertise">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_240"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleX="1.2"
                        android:scaleY="1.2"
                        android:background="@drawable/bg_home_zncx"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_240"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_115"
                            android:scaleX="1.2"
                            android:scaleY="1.2"
                            android:layout_marginTop="@dimen/dp_8"
                            android:background="@drawable/bg_home_zhdl" />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_115"
                            android:layout_marginTop="@dimen/dp_8"
                            android:scaleX="1.2"
                            android:scaleY="1.2"
                            android:background="@drawable/bg_home_maxiaomi" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:orientation="horizontal">
                    <RelativeLayout android:id="@+id/zncxLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_220"
                        android:layout_marginRight="@dimen/dp_6"
                        android:layout_weight="1"
                        android:background="@drawable/shape_gradient_blue_r_8"
                        android:orientation="vertical">
                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_220"
                            android:layout_centerInParent="true"
                            app:lottie_rawRes="@raw/home_inteligence01"
                            app:lottie_loop="true"
                            app:lottie_autoPlay="true" />
                        <TextView android:id="@+id/tv_zncx"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_12"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:textSize="23sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:text="智能组队"/>
                        <TextView android:id="@+id/tv_sub_zncx"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_zncx"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:lineSpacingExtra="@dimen/dp_3"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:text="智能组队出游\n行程 导航 对讲 全搞定"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <RelativeLayout android:id="@+id/zhdlLayout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_105"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:background="@drawable/shape_gradient_orange_r_8"
                            android:orientation="vertical">
                            <com.airbnb.lottie.LottieAnimationView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_105"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="-4dp"
                                app:lottie_rawRes="@raw/home_inteligence02"
                                app:lottie_loop="true"
                                app:lottie_autoPlay="true" />
                            <TextView android:id="@+id/tv_zhdl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_12"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:text="智慧景区"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_zhdl"
                                android:layout_marginTop="@dimen/dp_8"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:text="AI智能导游"/>
                        </RelativeLayout>
                        <RelativeLayout android:id="@+id/mxmLayout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_105"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/shape_gradient_orange_yellow_r_8"
                            android:orientation="vertical">
                            <com.airbnb.lottie.LottieAnimationView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_105"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="-4dp"
                                app:lottie_rawRes="@raw/home_maxiaoni"
                                app:lottie_loop="true"
                                app:lottie_autoPlay="true" />
                            <TextView android:id="@+id/tv_mxm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_12"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:text="马小秘"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_mxm"
                                android:layout_marginTop="@dimen/dp_8"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:text="贴身的行程管家"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>
    </FrameLayout>
</layout>