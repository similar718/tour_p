<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="activity"
            type="cn.xmzt.www.smartteam.activity.TripSignInListActivity" />
        <variable
            name="viewModel"
            type="cn.xmzt.www.smartteam.vm.TripSignInListViewModel" />
    </data>
    <RelativeLayout android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="false">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_alignParentBottom="true"
            />
        <!-- 顶部背景 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_392"
            android:background="@drawable/trip_signin_list_top_bg"/>

        <!-- 顶部返回和文字 -->
        <RelativeLayout
            android:id="@+id/rl_top_c"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">
            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:onClick="@{activity::onClick}"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_new_back_white"/>
            <TextView
                android:id="@+id/tv_top_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="集结点签到"
                android:textSize="@dimen/text_size_17"
                android:textColor="@color/color_FF_FF_FF"
                android:layout_centerInParent="true"
                android:maxWidth="@dimen/dp_260"
                android:singleLine="true"
                android:ellipsize="end"
                />
        </RelativeLayout>

        <!-- 中间显示签到人数状态 -->
        <RelativeLayout
            android:id="@+id/rl_top_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_height="@dimen/dp_112"
            android:layout_centerHorizontal="true"
            android:background="@drawable/trip_sign_in_list_center_bg"
            android:layout_marginTop="@dimen/dp_235">
            <!-- 应签到 -->
            <RelativeLayout
                android:id="@+id/rl_all_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_22"
                android:paddingRight="@dimen/dp_22"
                android:onClick="@{activity::onClick}"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tv_should_sign_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_50"
                    android:text="0"
                    android:textColor="@color/color_24A4FF"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:id="@+id/tv_should_sign_num_content"
                    android:layout_below="@+id/tv_should_sign_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12"
                    android:text="应签到"
                    android:textColor="@color/color_999999"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
            <!-- 已签到 -->
            <RelativeLayout
                android:id="@+id/rl_already_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_22"
                android:paddingRight="@dimen/dp_22"
                android:onClick="@{activity::onClick}"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tv_sign_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_50"
                    android:text="0"
                    android:textColor="@color/color_24A4FF"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:id="@+id/tv_sign_num_content"
                    android:layout_below="@+id/tv_sign_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12"
                    android:text="已签到"
                    android:textColor="@color/color_999999"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
            <!-- 未签到 -->
            <RelativeLayout
                android:id="@+id/rl_not_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_22"
                android:paddingRight="@dimen/dp_22"
                android:onClick="@{activity::onClick}"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tv_no_sign_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_50"
                    android:text="0"
                    android:textColor="@color/color_24A4FF"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:id="@+id/tv_no_sign_num_content"
                    android:layout_below="@+id/tv_no_sign_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12"
                    android:text="未签到"
                    android:textColor="@color/color_999999"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <!-- 底部内容背景 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_top_content"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/trip_sign_in_content_bg">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_marginRight="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp_2"
                />
            <TextView
                android:id="@+id/tv_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/trip_sign_in_list_empty_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_30"
                android:drawablePadding="@dimen/dp_36"
                android:textSize="@dimen/text_size_16"
                android:visibility="gone"
                android:text="亲，暂无签到记录哦~"
                android:textColor="@color/color_999999"
                android:gravity="center"
                />
        </RelativeLayout>
    </RelativeLayout>
</layout>

