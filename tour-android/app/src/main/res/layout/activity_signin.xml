<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="model"
            type="cn.xmzt.www.mine.model.SignInViewModel" />
    </data>
    <RelativeLayout
        android:fitsSystemWindows="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F9FA">
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="48dp"/>
        <cn.xmzt.www.view.AutofitRecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#70C3FF">
            <RelativeLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="@dimen/dp_25">
                <ImageView
                    android:id="@+id/title_back_iv"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:onClick="@{model::onClick}"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_new_back_white"/>
                <TextView
                    android:id="@+id/title_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="今日签到"
                    android:textColor="@color/color_FF_FF_FF"
                    android:textSize="17sp" />
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>
</layout>