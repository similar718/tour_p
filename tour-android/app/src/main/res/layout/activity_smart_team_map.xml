<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable
            name="activity"
            type="cn.xmzt.www.smartteam.activity.SmartTeamMapActivity" />
        <variable
            name="model"
            type="cn.xmzt.www.smartteam.vm.SmartTeamMapViewModel" />
    </data>
    <!-- 主界面内容 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 顶部内容 返回事件和名称 -->
        <RelativeLayout
            android:id="@+id/rl_top_c"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@color/white">
            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:onClick="@{activity::onClick}"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_new_back"/>
            <ImageView
                android:id="@+id/right_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:onClick="@{activity::onClick}"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/smart_team_map_top_right_icon"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/back_iv"
                android:layout_toLeftOf="@+id/right_iv"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/dp_200"
                    android:singleLine="true"
                    tools:text="群昵称"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_17" />
                <TextView
                    android:id="@+id/tv_title_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    tools:text="(28)"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_17"/>
            </LinearLayout>
        </RelativeLayout>
        <!-- 地图 -->
        <com.amap.api.maps.MapView
            android:id="@+id/mv_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_top_c"
            android:layout_marginBottom="@dimen/dp_178"
            />
        <!-- 设置集结点 -->
        <RelativeLayout
            android:id="@+id/rl_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/rl_top_c">
            <!-- 没有设置集结点和集结事件的布局 -->
            <RelativeLayout
                android:id="@+id/rl_no_setting_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shared_navigation_no_setting"
                android:visibility="gone"
                android:onClick="@{activity::onClick}"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置集结点/集结时间"
                    android:textColor="@color/color_49_BE_FF"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_26"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shared_navigation_setting_right_icon"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_26"
                    />
            </RelativeLayout>
            <!-- 设置集结点和集结事件的布局 成员 -->
            <RelativeLayout
                android:id="@+id/rl_setting_data_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/shared_navigation_already_set_person"
                >
                <TextView
                    android:id="@+id/tv_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="集结点"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_26"
                    />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="集结时间"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:layout_below="@+id/tv_des"
                    />
                <TextView
                    android:id="@+id/tv_des_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="世界之窗"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size_14"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_28"
                    android:layout_toRightOf="@+id/tv_des"
                    android:layout_marginRight="@dimen/dp_110"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />
                <TextView
                    android:id="@+id/tv_time_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03-18 10:30"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size_14"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_below="@+id/tv_des"
                    android:layout_marginLeft="@dimen/dp_28"
                    android:layout_toRightOf="@+id/tv_des"
                    />
                <TextView
                    android:id="@+id/tv_top_go_here_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_17"
                    android:layout_marginRight="@dimen/dp_25"
                    android:drawableTop="@drawable/shared_navigation_top_go_icon"
                    android:text="去这里"
                    android:textSize="@dimen/text_size_11"
                    android:textColor="@color/color_49_BE_FF"
                    android:textStyle="bold"
                    android:drawablePadding="@dimen/dp_2"
                    android:onClick="@{activity::onClick}"
                    />
                <TextView
                    android:id="@+id/tv_top_sign_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_17"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_toLeftOf="@+id/tv_top_go_here_p"
                    android:drawableTop="@drawable/trip_sign_icon"
                    android:gravity="center"
                    android:text="签到"
                    android:textSize="@dimen/text_size_11"
                    android:textColor="@color/color_49_BE_FF"
                    android:textStyle="bold"
                    android:onClick="@{activity::onClick}"
                    />
            </RelativeLayout>
            <!-- 设置集结点和集结时间的布局 队长 -->
            <RelativeLayout
                android:id="@+id/rl_setting_data_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/shared_navigation_already_set_captain">
                <RelativeLayout
                    android:id="@+id/rl_des_top_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_des_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="集结点"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/dp_17"
                        android:layout_marginLeft="@dimen/dp_26"
                        />
                    <TextView
                        android:id="@+id/tv_des_content_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="世界之窗"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/text_size_14"
                        android:layout_marginTop="@dimen/dp_17"
                        android:layout_marginLeft="@dimen/dp_28"
                        android:layout_toRightOf="@+id/tv_des_c"
                        android:layout_marginRight="@dimen/dp_120"
                        android:singleLine="true"
                        android:ellipsize="end"
                        />
                    <TextView
                        android:id="@+id/tv_top_go_here_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_25"
                        android:drawableTop="@drawable/shared_navigation_top_go_icon"
                        android:text="去这里"
                        android:textSize="@dimen/text_size_11"
                        android:textColor="@color/color_49_BE_FF"
                        android:textStyle="bold"
                        android:drawablePadding="@dimen/dp_2"
                        android:onClick="@{activity::onClick}"
                        />
                    <TextView
                        android:id="@+id/tv_top_go_edit_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_13"
                        android:layout_marginRight="@dimen/dp_20"
                        android:drawableTop="@drawable/shared_navigation_top_edit_icon"
                        android:text="编辑"
                        android:textSize="@dimen/text_size_11"
                        android:textColor="@color/color_49_BE_FF"
                        android:textStyle="bold"
                        android:layout_toLeftOf="@+id/tv_top_go_here_c"
                        android:drawablePadding="@dimen/dp_2"
                        android:onClick="@{activity::onClick}"
                        />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1_px"
                    android:layout_below="@+id/rl_des_top_c"
                    android:layout_marginTop="@dimen/dp_4"
                    android:background="@color/color_DA_DA_DA"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    />

                <RelativeLayout
                    android:id="@+id/rl_des_bottom_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_des_top_c"
                    android:layout_marginTop="@dimen/dp_14">

                    <TextView
                        android:id="@+id/tv_time_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="集结时间"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/dp_3"
                        android:layout_marginLeft="@dimen/dp_26"
                        />
                    <TextView
                        android:id="@+id/tv_time_content_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="03-18 10:30"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/text_size_14"
                        android:layout_marginTop="@dimen/dp_3"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_toRightOf="@+id/tv_time_c"
                        />
                    <TextView
                        android:id="@+id/tv_time_update_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_25"
                        android:text="修改"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/color_49_BE_FF"
                        android:textStyle="bold"
                        android:drawablePadding="@dimen/dp_2"
                        android:onClick="@{activity::onClick}"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <!-- 签到列表图标 -->
        <ImageView
            android:id="@+id/iv_sign_list_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_setting"
            android:src="@drawable/trip_info_list_icon"
            android:onClick="@{activity::onClick}"
            android:layout_marginLeft="@dimen/dp_m_5"
            android:layout_marginTop="@dimen/dp_20"/>
        <!-- 我的 -->
        <ImageView
            android:id="@+id/iv_mine_location_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shared_navigation_my_current_location_icon"
            android:layout_marginLeft="@dimen/dp_6"
            android:onClick="@{activity::onClick}"
            android:layout_below="@+id/rl_setting"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_5"
            />
        <!-- 全览 -->
        <ImageView
            android:id="@+id/iv_all_show_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/smart_team_all_show_icon"
            android:layout_marginLeft="@dimen/dp_6"
            android:onClick="@{activity::onClick}"
            android:layout_below="@+id/iv_mine_location_img"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_m_5"
            />
        <!-- 进入群信息 -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_m_5"
            android:layout_marginBottom="@dimen/dp_214"
            android:layout_alignParentBottom="true"
            >
            <ImageView
                android:id="@+id/iv_group_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/smart_team_map_group_in_icon"
                android:onClick="@{activity::onClick}"
                />
            <TextView
                android:id="@+id/tv_num_not_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99+"
                android:textColor="@color/color_FF_FF_FF"
                android:textSize="@dimen/text_size_10"
                android:paddingLeft="@dimen/dp_3"
                android:visibility="gone"
                android:paddingRight="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_3"
                android:background="@drawable/smart_team_map_not_read_bg"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        <!-- 底部内容 -->
        <RelativeLayout
            android:id="@+id/rl_bottom_content_"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_186"
            android:background="@drawable/dialog_route_pick_detail_bg"
            android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/iv_invite_friends_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/smart_team_map_invite_friends_icon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:onClick="@{activity::onClick}"
                android:layout_marginTop="@dimen/dp_4"
                />
            <TextView
                android:id="@+id/tv_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1_px"
                android:background="@color/color_e5e5e5"
                android:layout_marginTop="@dimen/dp_51"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_type_list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_33"
                android:layout_toLeftOf="@+id/iv_invite_friends_btn"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_18"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_car_person_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rv_type_list"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_12"
                />
        </RelativeLayout>
    </RelativeLayout>
</layout>