<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="cn.xmzt.www.selfdrivingtools.bean.ScenicSpotDetailBean.ScenicSpotListBean"/>
    </data>
    <RelativeLayout android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_14"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginBottom="@dimen/dp_14"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/item_scenic_spot_map_list_top_iv"
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_90"
            app:imgCUrl="@{item.photoUrl}"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/item_scenic_spot_map_list_top_iv"
            android:layout_alignTop="@+id/item_scenic_spot_map_list_top_iv"
            android:layout_alignBottom="@+id/item_scenic_spot_map_list_top_iv"
            android:layout_marginLeft="@dimen/dp_12"
            >
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{item.name}"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/color_333333"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginRight="@dimen/dp_20"
                />
            <TextView
                android:id="@+id/tv_address_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{item.description}"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/color_999999"
                android:layout_below="@+id/tv_name"
                android:layout_marginTop="@dimen/dp_3"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginRight="@dimen/dp_20"
                />
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text='@{"距离"+item.distanceFormat}'
                android:textSize="@dimen/text_size_11"
                android:textColor="@color/color_999999"
                android:drawablePadding="@dimen/dp_5"
                android:singleLine="true"
                android:drawableLeft="@drawable/wisdom_guide_address_icon"
                android:ellipsize="end"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_6"
                />
        </RelativeLayout>
    </RelativeLayout>
</layout>