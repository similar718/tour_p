<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_000000_30">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_280"
                android:background="@drawable/dialog_bg"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/dialog_top_rl"
                    android:layout_width="match_parent"
                    android:background="@drawable/dialog_blue_download_bg"
                    android:layout_height="@dimen/dp_92">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:textSize="@dimen/size_21"
                        android:text="离线下载"
                        android:textColor="@color/color_FF_FF_FF"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_59"
                        android:textSize="@dimen/size_13"
                        android:text="建议您在wifi的网络环境下下载离线包"
                        android:textColor="@color/color_ffffff_60"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/dialog_scenic_map_offline_render_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_below="@+id/dialog_top_rl"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:layout_marginRight="@dimen/dp_30">
                    <ImageView
                        android:id="@+id/iv_1"
                        android:layout_width="@dimen/dp_23"
                        android:layout_height="@dimen/dp_23"
                        android:src="@drawable/dialog_scenic_map_render_icon"
                        />
                    <TextView
                        android:id="@+id/tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手绘地图"
                        android:layout_toRightOf="@+id/iv_1"
                        android:layout_marginLeft="@dimen/size_6"
                        android:textStyle="bold"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_14"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推荐下载"
                        android:layout_toRightOf="@+id/tv_1"
                        android:layout_marginLeft="@dimen/size_6"
                        android:textColor="@color/color_FF_FF_FF"
                        android:textSize="@dimen/text_size_11"
                        android:layout_centerVertical="true"
                        android:background="@drawable/dialog_recommand_download_bg"
                        />
                    <TextView
                        android:id="@+id/dialog_scenic_map_offline_size_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.19M"
                        android:layout_toRightOf="@+id/tv_2"
                        android:layout_marginLeft="@dimen/size_10"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/text_size_12"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        />
                    <ImageView
                        android:id="@+id/dialog_scenic_map_offline_one_iv"
                        android:layout_width="@dimen/dp_23"
                        android:layout_height="@dimen/dp_23"
                        android:src="@drawable/dialog_scenic_map_download_finish_icon"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/dialog_scenic_map_offline_voice_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_27"
                    android:layout_below="@+id/dialog_scenic_map_offline_render_rl"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:layout_marginRight="@dimen/dp_30">

                    <ImageView
                        android:id="@+id/iv_10"
                        android:layout_width="@dimen/dp_23"
                        android:layout_height="@dimen/dp_23"
                        android:src="@drawable/dialog_scenic_map_voice_offline_icon"
                        />
                    <TextView
                        android:id="@+id/tv_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="离线语音包"
                        android:layout_toRightOf="@+id/iv_10"
                        android:layout_marginLeft="@dimen/size_6"
                        android:textStyle="bold"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_14"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/dialog_scenic_map_offline_voice_size_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.19M"
                        android:layout_toRightOf="@+id/tv_10"
                        android:layout_marginLeft="@dimen/size_10"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/text_size_12"
                        android:layout_centerVertical="true"
                        />
                    <ImageView
                        android:id="@+id/dialog_scenic_map_offline_two_iv"
                        android:layout_width="@dimen/dp_23"
                        android:layout_height="@dimen/dp_23"
                        android:src="@drawable/dialog_scenic_map_download_finish_icon"
                        android:layout_alignParentRight="true"
                        />

                    <cn.xmzt.www.view.CircularProgressView
                        android:id="@+id/cpv_progress"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        app:backColor="@color/color_FF_FF_FF"
                        app:progColor="@color/color_24A4FF"
                        app:progWidth="@dimen/dp_2"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        app:progress="65" />

                    <TextView
                        android:id="@+id/tv_download_progress"
                        android:layout_width="@dimen/dp_23"
                        android:layout_height="@dimen/dp_23"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/dp_7"
                        android:textColor="@color/color_24A4FF"
                        android:visibility="gone"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="100%"/>
                </RelativeLayout>
            </RelativeLayout>
            <ImageView
                android:id="@+id/dialog_cancel_iv"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_65"
                android:src="@drawable/dialog_scenic_cancel"
                android:padding="@dimen/dp_20"
                />
        </LinearLayout>

    </RelativeLayout>
</layout>