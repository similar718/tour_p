<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="horizontal"
    android:padding="@dimen/dp_6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_rectangle_white_radius_8">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_106"
            android:scaleType="centerCrop"
            android:src="@drawable/shape_rectangle_gray_radius_4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@drawable/shape_rectangle_black_radius_100"
            android:drawableStart="@drawable/ic_home_area"
            android:drawableLeft="@drawable/ic_home_area"
            android:drawablePadding="@dimen/dp_4"
            android:paddingStart="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_8"
            android:paddingTop="@dimen/dp_4"
            android:paddingEnd="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_4"
            android:text="深圳宝安坪洲"
            android:textColor="@color/color_FF_FF_FF"
            android:textSize="@dimen/text_size_10"
            app:layout_constraintBottom_toBottomOf="@+id/iv_photo"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:singleLine="true"
            android:text="[世界遗产在山西·奇幻晋北]..."
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_photo" />

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_3"
            android:lines="2"
            tools:text="贵州黄果树瀑布、荔枝小七孔、西江回迁户苗寨双飞5日6晚自驾游"
            android:textColor="@color/color_99_99_99"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <TextView
            android:id="@+id/tv_give"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:drawableStart="@drawable/ic_home_give_gray"
            android:drawableLeft="@drawable/ic_home_give_gray"
            android:drawablePadding="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_2"
            android:text="167"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintTop_toBottomOf="@+id/tv_des"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>