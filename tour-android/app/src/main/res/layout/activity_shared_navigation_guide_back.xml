<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View" />
        <variable
            name="activity"
            type="cn.xmzt.www.selfdrivingtools.activity.SharedNavigationGuideActivityBackUp" />
        <variable
            name="model"
            type="cn.xmzt.www.selfdrivingtools.viewmodel.SharedNavigationGuideViewModel" />
    </data>
    <RelativeLayout
        android:id="@+id/dl_shared_navigation_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.amap.api.navi.AMapNaviView
            android:id="@+id/navi_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <!-- 顶部信息 -->
        <RelativeLayout
            android:id="@+id/rl_top_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_139"
            android:layout_marginRight="@dimen/dp_m_10"
            android:layout_marginLeft="@dimen/dp_m_10"
            android:background="@drawable/amap_guide_top_white_bg">
            <com.amap.api.navi.view.NextTurnTipView
                android:id="@+id/amap_to_iv"
                android:layout_width="@dimen/dp_74"
                android:layout_height="@dimen/dp_74"
                android:src="@drawable/amap_to_left_icon"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_23"
                />
            <TextView
                android:id="@+id/amap_distance_tv"
                android:layout_width="@dimen/dp_90"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textSize="@dimen/text_size_43"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/amap_to_iv"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                />
            <TextView
                android:id="@+id/amap_meter_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="米"
                android:textSize="@dimen/text_size_23"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/amap_distance_tv"
                android:layout_alignBottom="@+id/amap_distance_tv"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_3"
                />
            <TextView
                android:id="@+id/amap_goto_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进入"
                android:textSize="@dimen/text_size_23"
                android:textColor="@color/color_939CA4"
                android:layout_toRightOf="@+id/amap_meter_tv"
                android:layout_alignBottom="@+id/amap_distance_tv"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_19"
                />
            <TextView
                android:id="@+id/amap_roude_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内部路"
                android:textSize="@dimen/text_size_23"
                android:textColor="@color/white"
                android:layout_alignLeft="@+id/amap_distance_tv"
                android:layout_below="@+id/amap_distance_tv"
                />
            <ImageView
                android:id="@+id/amap_then_to_iv"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:src="@drawable/amap_to_min_right_icon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_40"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/amap_then_to_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_below="@+id/amap_then_to_iv"
                android:text="随后"
                android:textColor="@color/color_e5e5e5"
                android:textSize="@dimen/text_size_14"
                android:layout_marginTop="@dimen/dp_4"
                android:visibility="gone"
                />
        </RelativeLayout>
        <!-- 车辆信息 -->
        <RelativeLayout
            android:id="@+id/rl_car_info"
            android:layout_width="@dimen/dp_73"
            android:layout_height="@dimen/dp_73"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_below="@+id/rl_top_content">
            <ImageView
                android:id="@+id/amap_car_info_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/amap_guide_carinfo_white_icon"
                />
            <TextView
                android:id="@+id/amap_car_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/text_size_26"
                android:textStyle="bold"
                android:textColor="@color/color_49_BE_FF"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_12"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="km/h"
                android:textSize="@dimen/text_size_11"
                android:textColor="@color/color_49_BE_FF"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_15"
                />
        </RelativeLayout>

        <!-- 个人位置 -->
        <ImageView
            android:id="@+id/amap_my_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_car_info"
            android:src="@drawable/amap_guide_my_white_icon"
            android:layout_marginLeft="@dimen/dp_6"
            android:visibility="visible"
            />
        <!-- 底部信息 -->
        <RelativeLayout
            android:id="@+id/rl_bottom_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_69"
            android:background="@drawable/amap_guide_bottom_white_bg"
            android:layout_alignParentBottom="true">
            <!-- 正常导航情况 -->
            <RelativeLayout
                android:id="@+id/rl_normal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/amap_exit_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/amap_guide_exit_white_icon"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/dp_11"
                    android:paddingLeft="@dimen/dp_20"
                    />
                <TextView
                    android:id="@+id/amap_exit_right_line_tv"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_39"
                    android:layout_centerVertical="true"
                    android:background="@color/color_e5e5e5"
                    android:layout_toRightOf="@+id/amap_exit_iv"
                    />
                <ImageView
                    android:id="@+id/amap_setting_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/amap_guide_setting_white_icon"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/dp_20"
                    android:paddingLeft="@dimen/dp_11"
                    android:layout_alignParentRight="true"
                    />
                <TextView
                    android:id="@+id/amap_setting_left_line_tv"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_39"
                    android:layout_centerVertical="true"
                    android:background="@color/color_e5e5e5"
                    android:layout_toLeftOf="@+id/amap_setting_iv"
                    />
                <TextView
                    android:id="@+id/amap_continue_guide_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="继续导航"
                    android:textColor="@color/color_49_BE_FF"
                    android:textSize="@dimen/text_size_21"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/amap_setting_left_line_tv"
                    android:layout_toRightOf="@+id/amap_exit_right_line_tv"
                    android:visibility="gone"
                    />
                <RelativeLayout
                    android:id="@+id/rl_bottom_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/amap_setting_left_line_tv"
                    android:layout_toRightOf="@+id/amap_exit_right_line_tv"
                    >
                    <LinearLayout
                        android:id="@+id/ll_top_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        >
                        <TextView
                            android:id="@+id/tv_shengyu_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="剩余"
                            android:textSize="@dimen/text_size_17"
                            android:textColor="@color/color_333333"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/amap_shengyu_distance_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textSize="@dimen/text_size_21"
                            android:textColor="@color/color_333333"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_bottom_t"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="公里"
                            android:textSize="@dimen/text_size_17"
                            android:textColor="@color/color_333333"
                            android:layout_marginRight="@dimen/dp_5"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/amap_shengyu_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0分钟"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/text_size_17"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tv_minute_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="分钟"
                            android:textSize="@dimen/text_size_17"
                            android:textColor="@color/color_333333"
                            android:layout_marginRight="@dimen/dp_3"
                            android:visibility="gone"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/amap_estimate_arrival_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预计00:00到达"
                        android:layout_below="@+id/ll_top_content"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/color_666666"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>
            </RelativeLayout>
            <!-- 准备退出导航情况 -->
            <RelativeLayout
                android:id="@+id/rl_exit"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/amap_exit_guide_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="退出导航"
                        android:textColor="@color/color_FF4F00"
                        android:textSize="@dimen/text_size_21"
                        android:textStyle="bold"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/amap_exit_cancel_center_line_tv"
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_39"
                        android:background="@color/color_e5e5e5"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/amap_exit_guide_cancel_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="取消"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_21"
                        android:textStyle="bold"
                        android:gravity="center"
                        />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <!-- 全览信息 -->
        <ImageView
            android:id="@+id/amap_all_show_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rl_bottom_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/amap_guide_allshow_white_icon"
            />
        <!-- 语音信息 -->
        <ImageView
            android:id="@+id/amap_voice_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/amap_guide_voice_white_bg"
            android:layout_marginBottom="@dimen/dp_75"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            />
        <!-- 路况信息 -->
        <RadioButton
            android:id="@+id/amap_lukuang_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/rl_top_content"
            android:button="@drawable/amap_lukuang_white_selector"
            android:background="@null"
            />
        <!-- 人员和车辆切换 -->
        <ImageView
            android:id="@+id/amap_type_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guide_car_icon_white"
            android:layout_above="@+id/amap_min_iv"
            />
        <!-- 最小化信息 -->
        <ImageView
            android:id="@+id/amap_min_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/amap_guide_min_white_icon"
            android:layout_above="@+id/rl_bottom_content"
            />
        <!-- 刷新信息 -->
        <ImageView
            android:id="@+id/amap_refresh_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/amap_guide_refresh_white_bg"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/ll_zoom_content"
            />
        <!-- 更改地图zoom值信息 -->
        <com.amap.api.navi.view.ZoomButtonView
            android:id="@+id/myZoomButtonView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/rl_bottom_content"
            android:visibility="gone"
            />
        <LinearLayout
            android:id="@+id/ll_zoom_content"
            android:layout_width="@dimen/dp_68"
            android:layout_height="@dimen/dp_118"
            android:orientation="vertical"
            android:layout_above="@+id/rl_bottom_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/amap_guide_zoom_white_bg"
            android:weightSum="2"
            android:visibility="visible"
            >
            <RelativeLayout
                android:id="@+id/rl_zoom_add"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_zoom_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/amap_guide_zoom_add_white_bg"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_zoom_reduce"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_zoom_reduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/amap_guide_zoom_reduce_white_bg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_12"
                    />
            </RelativeLayout>
        </LinearLayout>
        <!-- 底部dialog信息 -->
        <RelativeLayout
            android:id="@+id/rl_dialog_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@color/color_000000_30">
            <LinearLayout
                android:id="@+id/ll_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_119"
                android:orientation="vertical"
                android:background="@drawable/dialog_white_bg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_144"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tv_dialog_line_content_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="路线偏好"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/color_000000"
                        android:textStyle="bold"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        >
                        <RadioButton
                            android:id="@+id/rb_dialog_dbyd"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/amap_guide_dialog_dbyd_selector"
                            android:button="@null"
                            android:layout_marginRight="@dimen/dp_12"
                            />
                        <RadioButton
                            android:id="@+id/rb_dialog_dbsf"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/amap_guide_dialog_dbsf_selector"
                            android:button="@null"
                            android:layout_marginRight="@dimen/dp_12"
                            />
                        <RadioButton
                            android:id="@+id/rb_dialog_dbgs"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/amap_guide_dialog_dbgs_selector"
                            android:button="@null"
                            android:layout_marginRight="@dimen/dp_12"
                            />
                        <RadioButton
                            android:id="@+id/rb_dialog_gsyx"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/amap_guide_dialog_gsyx_selector"
                            android:button="@null"
                            android:layout_marginRight="@dimen/dp_12"
                            android:checked="true"
                            />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_dialog_line_content_bottom_line_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/color_e5e5e5"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_110"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tv_dialog_voice_content_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="导航语音播报"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/color_000000"
                        android:textStyle="bold"
                        />
                    <RadioGroup
                        android:id="@+id/rg_dialog_voice_setting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <RadioButton
                            android:id="@+id/rb_dialog_voice_detail"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/amap_guide_dialog_btn_selector"
                            android:button="@null"
                            android:layout_marginRight="@dimen/dp_12"
                            android:text="详细播报"
                            android:gravity="center"
                            android:textColor="@color/amap_guide_dialog_white_btn_selector"
                            android:checked="true"
                            />
                        <RadioButton
                            android:id="@+id/rb_dialog_voice_intro"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/amap_guide_dialog_btn_selector"
                            android:button="@null"
                            android:layout_marginRight="@dimen/dp_12"
                            android:text="简介播报"
                            android:gravity="center"
                            android:textColor="@color/amap_guide_dialog_white_btn_selector"
                            />
                        <RadioButton
                            android:id="@+id/rb_dialog_voice_nothing"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/amap_guide_dialog_btn_selector"
                            android:button="@null"
                            android:layout_marginRight="@dimen/dp_12"
                            android:text="静音"
                            android:gravity="center"
                            android:textColor="@color/amap_guide_dialog_white_btn_selector"
                            />
                    </RadioGroup>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_dialog_voice_content_bottom_line_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/color_e5e5e5"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_110"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tv_dialog_guide_content_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="导航视角"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/color_000000"
                        android:textStyle="bold"
                        />
                    <RadioGroup
                        android:id="@+id/rg_dialog_show_setting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <RadioButton
                            android:id="@+id/rb_dialog_car_to_north"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/amap_guide_dialog_btn_selector"
                            android:button="@null"
                            android:layout_marginRight="@dimen/dp_12"
                            android:text="车头朝北"
                            android:gravity="center"
                            android:textColor="@color/amap_guide_dialog_white_btn_selector"
                            android:checked="true"
                            />
                        <RadioButton
                            android:id="@+id/rb_dialog_map_to_north"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/amap_guide_dialog_btn_selector"
                            android:button="@null"
                            android:layout_marginRight="@dimen/dp_12"
                            android:text="地图朝北"
                            android:gravity="center"
                            android:textColor="@color/amap_guide_dialog_white_btn_selector"
                            />
                        <RadioButton
                            android:id="@+id/rb_dialog_3d"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/amap_guide_dialog_btn_selector"
                            android:button="@null"
