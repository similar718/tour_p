<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>
    <LinearLayout android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="horizontal">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10">
            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_151"
                android:scaleType="centerCrop"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/icon_default"/>

            <TextView
                android:id="@+id/tv_line_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/home_fragment_linetype_bg"
                android:paddingLeft="@dimen/dp_13"
                android:paddingRight="@dimen/dp_13"
                android:paddingTop="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_3"
                android:textSize="@dimen/text_size_11"
                android:textColor="@color/color_FF_FF_FF"
                />

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/iv_photo"
                app:layout_constraintLeft_toLeftOf="@+id/iv_photo"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@drawable/shape_rectangle_black_radius_100"
                android:drawableStart="@drawable/ic_home_area"
                android:drawableLeft="@drawable/ic_home_area"
                android:drawablePadding="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_4"
                android:paddingRight="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_4"
                tools:text="深圳宝安坪洲"
                android:textColor="@color/color_FF_FF_FF"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/tv_give"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/iv_photo"
                app:layout_constraintRight_toRightOf="@+id/iv_photo"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@drawable/shape_rectangle_black_radius_100"
                android:drawableLeft="@drawable/ic_home_give"
                android:drawablePadding="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_4"
                android:paddingRight="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_4"
                tools:text="167"
                android:textColor="@color/color_FF_FF_FF"
                android:textSize="@dimen/text_size_10"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_12"
                android:singleLine="true"
                android:textStyle="bold"
                tools:text="[世界遗产在山西·奇幻晋北]..."
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_18"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_photo" />

            <TextView
                android:id="@+id/tv_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_12"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="贵州黄果树瀑布、荔枝小七孔、西江回迁户苗寨双飞5日6晚自驾游"
                android:textColor="@color/color_99_99_99"
                android:textSize="@dimen/text_size_14" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>