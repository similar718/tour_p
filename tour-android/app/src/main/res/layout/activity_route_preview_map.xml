<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <variable
            name="activity"
            type="cn.xmzt.www.route.activity.RoutePreviewMapActivity" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 顶部内容 返回事件和名称 -->
        <RelativeLayout
            android:id="@+id/rl_top_c"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@color/white">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:onClick="@{activity::onClick}"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_new_back"/>
            <TextView
                android:id="@+id/tv_top_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="西藏3天2晚结伴同行自驾游"
                android:textSize="@dimen/text_size_17"
                android:textColor="@color/color_333333"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/right_iv"
                android:gravity="center"
                android:layout_toRightOf="@+id/iv_back"
                android:maxWidth="@dimen/dp_260"
                android:singleLine="true"
                android:ellipsize="end"
                />
            <ImageView
                android:id="@+id/right_iv"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingLeft="20dp"
                android:layout_alignParentRight="true"
                android:paddingRight="20dp"
                android:visibility="invisible"
                android:layout_height="match_parent"
                android:src="@drawable/icon_new_back"/>
        </RelativeLayout>
        <!-- 地图 -->
        <com.amap.api.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_top_c"
            />
        <!--<LinearLayout android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white">
            <TextView android:id="@+id/tv_route_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/color_333333"
                android:textStyle="bold"
                android:textSize="16sp"
                tools:text="川藏下夏日10日自驾游【成都出发】"/>
            <TextView android:id="@+id/tv_route_xc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_14"
                tools:text="总行程：100km"/>
            <TextView android:id="@+id/tv_route_tjjd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_14"
                tools:text="途径：10个景点"/>
            <TextView android:id="@+id/tv_route_xcsj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_14"
                tools:text="行程时间：3天2晚"/>
        </LinearLayout>-->

        <!-- 底部内容 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_56"
            android:layout_alignParentBottom="true"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_trip_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl_bottom_content"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginRight="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_m_4"
                android:background="@color/color_FF_FF_FF"
                android:visibility="gone"
                />
            <RelativeLayout
                android:id="@+id/rl_bottom_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:background="@drawable/shared_navigation_bottom_bg"
                android:layout_marginBottom="@dimen/dp_m_5"
                >
                <RelativeLayout
                    android:id="@+id/rl"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_56"
                    android:background="@drawable/shared_navigation_bottom_right_bg"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_3"
                    android:layout_marginBottom="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_m_1"
                    >
                    <ImageView
                        android:id="@+id/iv_bottom_to_up"
                        android:layout_width="@dimen/dp_42"
                        android:layout_height="@dimen/dp_56"
                        android:src="@drawable/shared_navigation_bottom_toup_icon"
                        android:paddingLeft="@dimen/dp_14"
                        android:paddingRight="@dimen/dp_12"
                        android:layout_alignParentRight="true"
                        android:paddingTop="@dimen/dp_17"
                        android:paddingBottom="@dimen/dp_17"
                        android:onClick="@{activity::onClick}"
                        />
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_days_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_18"
                    android:layout_toLeftOf="@+id/rl"
                    android:background="@color/transparent"
                    android:paddingLeft="@dimen/dp_5"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>