<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto">
    <data>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_10">
            <LinearLayout android:id="@+id/timeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="0dp"
                    android:gravity="center"
                    android:text="01"
                    android:visibility="invisible"
                    android:textStyle="bold"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_20" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="DAY"
                    android:visibility="invisible"
                    android:textColor="@color/color_DA_DA_DA"
                    android:textSize="@dimen/text_size_13" />
            </LinearLayout>
            <ImageView
                android:id="@+id/dotImg1"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:gravity="center"
                android:scaleType="centerInside"
                android:layout_toRightOf="@+id/timeLayout"
                android:layout_marginLeft="@dimen/dp_7"
                android:src="@drawable/shared_navigation_trip_list_scenicspot_icon"  />
            <TextView
                android:id="@+id/tvContent1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/dotImg1"
                android:layout_marginLeft="@dimen/dp_m_11"
                android:layout_below="@+id/dotImg1"
                android:minLines="1"
                android:background="@drawable/bg_time_line"
                android:paddingLeft="18dp"
                android:textColor="@color/color_66_66_66"
                android:layout_alignBottom="@+id/rl_content_spot"
                android:textSize="@dimen/size_14"/>
            <RelativeLayout
                android:id="@+id/rl_content_spot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/dotImg1"
                android:layout_marginLeft="@dimen/dp_8"
                >
                <TextView
                    android:id="@+id/tvTitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minLines="1"
                    android:textColor="@color/color_33_33_33"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:ellipsize="end"/>
                <RelativeLayout
                    android:id="@+id/rl_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tvTitle1"
                    android:layout_below="@+id/tvTitle1"
                    android:layout_marginTop="@dimen/dp_10">
                    <TextView
                        android:id="@+id/tv_scenic_spot_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_24A4FF"
                        android:textSize="@dimen/text_size_14"
                        android:layout_centerVertical="true"
                        android:drawableRight="@drawable/shared_navigation_trip_list_right_icon"
                        android:drawablePadding="@dimen/dp_3"
                        />
                    <TextView
                        android:id="@+id/tv_scenic_spot_voice"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_24"
                        android:text="语音讲解"
                        android:textColor="@color/color_ff9600"
                        android:textSize="@dimen/text_size_11"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:background="@drawable/shared_navigation_voice_bg"
                        android:layout_toRightOf="@+id/tv_scenic_spot_name"
                        />

                </RelativeLayout>
                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_161"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_below="@+id/rl_top"
                    />
                <cn.xmzt.www.view.ExpandableMoreTextView
                    android:id="@+id/expand_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/banner"
                    expandableTextView:animAlphaStart="1"
                    expandableTextView:maxCollapsedLines="5"
                    android:layout_marginBottom="@dimen/dp_20"
                    >
                    <TextView
                        android:id="@id/expandable_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-light"
                        android:lineSpacingExtra="@dimen/dp_10"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_14" />

                    <ImageButton
                        android:id="@id/expand_collapse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:text="查看全部"
                        android:background="@android:color/transparent"
                        android:padding="16dp" />
                </cn.xmzt.www.view.ExpandableMoreTextView>
            </RelativeLayout>



        </RelativeLayout>
    </RelativeLayout>
</layout>
