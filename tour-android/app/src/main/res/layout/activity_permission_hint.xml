<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="activity"
            type="cn.xmzt.www.main.activity.PermissionHintActivity" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f4f4f4">
        <RelativeLayout
            android:id="@+id/dialog_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_23">

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="欢迎使用小马在途"
                    android:textStyle="bold"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_24"
                    android:layout_marginLeft="@dimen/dp_20"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="为了给您提供优质的对讲，精准的导航等服务，我们 需要申请以下权限："
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size_14"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_33"
                    android:lineSpacingExtra="@dimen/dp_2"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_90"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/dialog_bg"
                    android:layout_marginTop="@dimen/dp_20"
                    >
                    <ImageView
                        android:id="@+id/iv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:src="@drawable/permission_talk_icon"
                        />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_toRightOf="@+id/iv_1"
                        >
                        <TextView
                            android:id="@+id/tv_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="麦克风"
                            android:textSize="@dimen/text_size_18"
                            android:textColor="@color/color_333333"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="为您组队出行提供实时对讲服务"
                            android:textSize="@dimen/text_size_14"
                            android:textColor="@color/color_999999"
                            android:layout_below="@+id/tv_1"
                            android:layout_marginTop="@dimen/dp_2"
                            />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_90"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/dialog_bg"
                    android:layout_marginTop="@dimen/dp_16"
                    >
                    <ImageView
                        android:id="@+id/iv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:src="@drawable/permission_location_icon"
                        />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_toRightOf="@+id/iv_2"
                        >
                        <TextView
                            android:id="@+id/tv_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="位置"
                            android:textSize="@dimen/text_size_18"
                            android:textColor="@color/color_333333"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="为您提供成员位置共享，精准导航服务"
                            android:textSize="@dimen/text_size_14"
                            android:textColor="@color/color_999999"
                            android:layout_below="@+id/tv_2"
                            android:layout_marginTop="@dimen/dp_2"
                            />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_90"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/dialog_bg"
                    android:layout_marginTop="@dimen/dp_20"
                    >
                    <ImageView
                        android:id="@+id/iv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:src="@drawable/permission_notification_icon"
                        />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_toRightOf="@+id/iv_3"
                        >
                        <TextView
                            android:id="@+id/tv_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="通知"
                            android:textSize="@dimen/text_size_18"
                            android:textColor="@color/color_333333"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="为您推送订单进度通知、群聊消息等"
                            android:textSize="@dimen/text_size_14"
                            android:textColor="@color/color_999999"
                            android:layout_below="@+id/tv_3"
                            android:layout_marginTop="@dimen/dp_2"
                            />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同意以上授权，能给您更好的体验，您也可以在系统设置 中关闭授权，但可能会影响部分功能使用。"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size_13"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_50"
                    android:layout_marginRight="@dimen/dp_20"
                    android:lineSpacingExtra="@dimen/dp_2"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/dialog_agree_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/permission_agree"
                android:layout_below="@+id/ll_content"
                android:layout_marginTop="@dimen/dp_15"
                />

            <TextView
                android:id="@+id/tv_think"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我再想想"
                android:layout_below="@+id/dialog_agree_iv"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:gravity="center"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_16"
                android:layout_marginBottom="@dimen/dp_23"
                />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</layout>