<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="activity"
            type="cn.xmzt.www.selfdrivingtools.activity.ScenicFeedBackActivity" />
        <variable
            name="model"
            type="cn.xmzt.www.selfdrivingtools.viewmodel.ScenicFeedBackViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_FF_FF_FF"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/top_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/color_FF_FF_FF"
                >
                <ImageView
                    android:id="@+id/feed_back_iv"
                    android:layout_width="wrap_content"
                    android:onClick="@{activity::onClick}"

                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_new_back"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建议与反馈"
                    android:layout_centerInParent="true"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_17"
                    />
            </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_below="@+id/top_rl"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1_px"
                android:background="@color/color_e5e5e5"
                android:layout_marginTop="@dimen/size_6"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_82"
                android:background="@drawable/scenic_feed_back_nav_bg"
                android:layout_marginLeft="@dimen/dp_m_10"
                android:layout_marginRight="@dimen/dp_m_10"
                android:layout_marginTop="@dimen/dp_m_5"
                android:weightSum="4"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/feek_back_type_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_8"
                android:text="当前现状"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1_px"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/color_e5e5e5"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_22"
                />
            <TextView
                android:id="@+id/tv_ques"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_f4f4f4"/>
            <RelativeLayout
                android:id="@+id/rl_question_scenic_spot"
                android:layout_width="match_parent"
                android:onClick="@{activity::onClick}"
                android:layout_height="@dimen/dp_44">
                <TextView
                    android:id="@+id/question_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问题景点"
                    android:textSize="@dimen/dp_16"
                    android:textStyle="bold"
                    android:textColor="@color/color_333333"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    />
                <TextView
                    android:id="@+id/tv_scenic_spot_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择景点"
                    android:textSize="@dimen/dp_16"
                    android:textColor="@color/color_999999"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/question_tv"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/dp_50"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/scenic_feed_back_more_icon"
                    android:paddingRight="@dimen/dp_19"
                    android:paddingLeft="@dimen/dp_19"
                    android:layout_alignParentRight="true"
                    android:visibility="visible"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_f4f4f4"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_148">
                <TextView
                    android:id="@+id/desc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="补充描述"
                    android:textSize="@dimen/dp_16"
                    android:textStyle="bold"
                    android:textColor="@color/color_333333"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_15"
                    />

                <EditText
                    android:id="@+id/et_desc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:hint="50个汉字以内"
                    android:textColorHint="@color/color_DA_DA_DA"
                    android:textSize="@dimen/dp_16"
                    android:textColor="@color/color_333333"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/desc_tv"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginRight="@dimen/size_21"
                    android:background="@drawable/suggest_and_feedback_desc_bg"
                    android:layout_marginTop="@dimen/dp_11"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_12"
                    android:maxLines="3"
                    android:gravity="left"
                    android:maxLength="50"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_f4f4f4"/>
            <RelativeLayout
                android:id="@+id/rl_tel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44">
                <TextView
                    android:id="@+id/tel_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textSize="@dimen/dp_16"
                    android:textStyle="bold"
                    android:textColor="@color/color_333333"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_21"
                    />
                <ImageView
                    android:id="@+id/iv_tel_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/login_delete"
                    android:paddingRight="@dimen/dp_20"
                    android:paddingLeft="@dimen/dp_20"
                    android:visibility="invisible"
                    android:onClick="@{activity::onClick}"
                    android:layout_alignParentRight="true"
                    />
                <EditText
                    android:id="@+id/et_tel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入您的手机号"
                    android:textSize="@dimen/dp_14"
                    android:textColorHint="@color/color_DA_DA_DA"
                    android:textColor="@color/color_333333"
                    android:layout_centerVertical="true"
                    android:inputType="number"
                    android:layout_toRightOf="@+id/tel_tv"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_toLeftOf="@+id/iv_tel_delete"
                    android:background="@null"
                    android:maxLength="11"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f4f4f4"
                >
                <ImageView
                    android:id="@+id/iv_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_21"
                    android:layout_marginRight="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_15"
                    android:onClick="@{activity::onClick}"
                    android:src="@drawable/suggest_and_feedback_submit_btn"
                    />
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_custom_server"
            android:layout_width="@dimen/dp_69"
            android:layout_height="@dimen/dp_69"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_194"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/scenic_feed_back_tel_icon"
            android:onClick="@{activity::onClick}"
            />
        <RelativeLayout
            android:id="@+id/rl_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_below="@+id/top_rl"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_109"
                android:layout_centerHorizontal="true"
                >
                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/scenic_feed_back_success"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="反馈成功"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp_16"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/iv_1"
                    android:layout_marginTop="@dimen/dp_20"
                    />
                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3妙后自动跳转到主页面..."
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/dp_16"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv_1"
                    android:layout_marginTop="@dimen/dp_10"
                    />
                <TextView
                    android:id="@+id/tv_to_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即跳转"
                    android:textColor="@color/color_24A4FF"
                    android:onClick="@{activity::onClick}"
                    android:textSize="@dimen/dp_16"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv_2"
                    android:padding="@dimen/dp_10"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>