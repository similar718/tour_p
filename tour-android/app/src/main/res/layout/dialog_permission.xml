<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
    </data>
    <RelativeLayout
        android:id="@+id/dialog_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/color_f4f4f4"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="43dp" >

        <ImageView
            android:id="@+id/dialog_content_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/permission_content"
            />

        <ImageView
            android:id="@+id/dialog_agree_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/permission_agree"
            android:layout_below="@+id/dialog_content_iv"
            android:layout_marginTop="@dimen/dp_15"
            />

        <TextView
            android:id="@+id/tv_think"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我再想想"
            android:layout_below="@+id/dialog_agree_iv"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_16"
            />
    </RelativeLayout>
</layout>