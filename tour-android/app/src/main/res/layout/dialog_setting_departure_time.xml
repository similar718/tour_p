<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40">

        <RelativeLayout
            android:id="@+id/dialog_top_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_76"
            android:background="@drawable/dialog_blue_download_bg_all"
            >
            <RelativeLayout
                android:id="@+id/rl_content_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_8">
                <TextView
                    android:id="@+id/tv_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="集结点"
                    android:textColor="@color/color_FF_FF_FF"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_21"
                    />
                <TextView
                    android:id="@+id/dialog_des_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="世界之窗"
                    android:textColor="@color/color_FF_FF_FF"
                    android:textSize="@dimen/text_size_17"
                    android:layout_toRightOf="@+id/tv_des"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_content_top"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_5">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/loading"
                    android:layout_width="@dimen/dp_17"
                    android:layout_height="@dimen/dp_17"
                    app:lottie_rawRes="@raw/select_time_loading"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true" />
                <TextView
                    android:id="@+id/dialog_des_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="距您56km 驾车大约耗时1小时12分钟"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/color_ffffff_50"
                    android:visibility="visible"
                    android:layout_toRightOf="@+id/loading"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_6"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_conn"
            android:layout_marginTop="@dimen/dp_m_10"
            android:paddingBottom="@dimen/size_20"
            android:background="@drawable/default_dialog_shape">
            <RelativeLayout
                android:id="@+id/rl_top_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_91"
                android:background="@drawable/dialog_gray_download_bg"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="集结时间"
                    android:textColor="@color/color_33_33_33"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_21"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginLeft="@dimen/dp_32"
                    />
                <TextView
                    android:id="@+id/dialog_setting_time_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03-18 10:30"
                    android:textColor="@color/color_99333333"
                    android:textSize="@dimen/text_size_17"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_32"
                    android:layout_alignParentRight="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您的里程和大约耗时仅供参考，请综合成员 位置等其他因素，合理设置集结时间。"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:layout_marginLeft="@dimen/dp_32"
                    android:layout_marginRight="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_3"
                    android:textSize="@dimen/text_size_11"
                    android:textColor="@color/color_999999_60"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_12"
                    />
            </RelativeLayout>
            <!-- 时间选择控件 -->
            <RelativeLayout
                android:id="@+id/rl_time_picker"
                android:layout_below="@+id/rl_top_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_44"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/dp_64"
                    android:layout_marginTop="@dimen/dp_14"
                    android:weightSum="4">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="月"
                        android:paddingLeft="@dimen/dp_10"
                        android:textColor="@color/color_49_BE_FF"
                        android:textSize="@dimen/text_size_16"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="日"
                        android:gravity="center"
                        android:textColor="@color/color_49_BE_FF"
                        android:textSize="@dimen/text_size_16"
                        android:paddingRight="@dimen/dp_4"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="时"
                        android:gravity="center"
                        android:textColor="@color/color_49_BE_FF"
                        android:textSize="@dimen/text_size_16"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="分"
                        android:gravity="right"
                        android:paddingRight="@dimen/dp_15"
                        android:textColor="@color/color_49_BE_FF"
                        android:textSize="@dimen/text_size_16"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/date_picker_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_below="@+id/ll_txt"
                    android:paddingBottom="@dimen/dp_20"
                    android:paddingLeft="@dimen/dp_44"
                    android:paddingRight="@dimen/dp_44"
                    android:paddingTop="@dimen/dp_20">

                    <cn.xmzt.www.view.datepicker.PickerView
                        android:id="@+id/dpv_year"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/picker_view_height"
                        android:visibility="gone"
                        android:layout_weight="3" />

                    <TextView
                        android:id="@+id/tv_year"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/year"
                        android:visibility="gone"
                        android:textColor="@color/date_picker_text_dark"
                        android:textSize="@dimen/date_unit_text_size" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" >
                        <TextView
                            android:id="@+id/tv_month_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="月"
                            android:textColor="@color/color_49_BE_FF"
                            android:textSize="@dimen/text_size_16"
                            android:layout_centerHorizontal="true"
                            />
                        <cn.xmzt.www.view.datepicker.PickerView
                            android:id="@+id/dpv_month"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/picker_view_height"
                            android:layout_below="@+id/tv_month_txt"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_month"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/month"
                        android:visibility="invisible"
                        android:textColor="@color/date_picker_text_dark"
                        android:textSize="@dimen/date_unit_text_size" />


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" >
                        <TextView
                            android:id="@+id/tv_days_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="日"
                            android:textColor="@color/color_49_BE_FF"
                            android:textSize="@dimen/text_size_16"
                            android:layout_centerHorizontal="true"
                            />
                        <cn.xmzt.www.view.datepicker.PickerView
                            android:id="@+id/dpv_day"
                            android:layout_width="wrap_content"
                            android:layout_below="@+id/tv_days_txt"
                            android:layout_height="@dimen/picker_view_height"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/day"
                        android:visibility="invisible"
                        android:textColor="@color/date_picker_text_dark"
                        android:textSize="@dimen/date_unit_text_size" />


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" >
                        <TextView
                            android:id="@+id/tv_hour_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="时"
                            android:textColor="@color/color_49_BE_FF"
                            android:textSize="@dimen/text_size_16"
                            android:layout_centerHorizontal="true"
                            />
                        <cn.xmzt.www.view.datepicker.PickerView
                            android:id="@+id/dpv_hour"
                            android:layout_width="wrap_content"
                            android:layout_below="@+id/tv_hour_txt"
                            android:layout_height="@dimen/picker_view_height"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_hour_unit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/hour"
                        android:visibility="invisible"
                        android:textColor="@color/date_picker_text_dark"
                        android:textSize="@dimen/date_unit_text_size" />


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" >
                        <TextView
                            android:id="@+id/tv_minutes_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="分"
                            android:textColor="@color/color_49_BE_FF"
                            android:textSize="@dimen/text_size_16"
                            android:layout_centerHorizontal="true"
                            />
                        <cn.xmzt.www.view.datepicker.PickerView
                            android:id="@+id/dpv_minute"
                            android:layout_width="wrap_content"
                            android:layout_below="@+id/tv_minutes_txt"
                            android:layout_height="@dimen/picker_view_height"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_minute_unit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/minute"
                        android:visibility="invisible"
                        android:textColor="@color/date_picker_text_dark"
                        android:textSize="@dimen/date_unit_text_size" />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_85"
                    android:background="@drawable/white_gradient_100_60"
                    android:visibility="gone"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_85"
                    android:background="@drawable/white_gradient_60_100"
                    android:layout_alignBottom="@+id/ll_date"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/dialog_bottom"
                android:layout_width="match_parent"
                android:layout_below="@+id/rl_time_picker"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginRight="@dimen/dp_32"
                >
                <TextView
                    android:id="@+id/cancel_tv"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_36"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/common_cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_17"
                    android:background="@drawable/confirm_selector"
                    android:layout_marginRight="@dimen/dp_6"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/confirm_tv"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_36"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/common_confirm"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_17"
                    android:background="@drawable/cancel_selecor"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:clickable="true"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_conn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_top_rl"
            android:layout_marginTop="@dimen/dp_m_10"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_36"
                android:src="@drawable/dialog_con"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_36"
                android:src="@drawable/dialog_con"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </RelativeLayout>
</layout>