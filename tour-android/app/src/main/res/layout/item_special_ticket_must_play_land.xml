<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_140"
    android:layout_height="@dimen/dp_144"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_16"
    android:background="@drawable/item_special_ticket_must_play_bg">
    <ImageView
        android:id="@+id/item_special_ticket_must_play_bg_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@color/color_FF_FF_FF"
        android:scaleType="fitXY"
        />
    <TextView
        android:text="今日订"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_20"
        android:textSize="@dimen/text_size_11"
        android:textColor="@color/color_FF_FF_FF"
        android:gravity="center"
        android:background="@drawable/item_special_ticket_must_play_left_top_bg"
        />
    <TextView
        android:id="@+id/item_special_ticket_must_play_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_special_ticket_must_play_bg_iv"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/color_333333"
        android:text="长隆野生动物世界门票特价中"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_margin="@dimen/dp_7"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/item_special_ticket_must_play_name_tv"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginBottom="@dimen/dp_7"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_FF6000"
            android:text="￥"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_10"
            />
        <TextView
            android:id="@+id/item_special_ticket_must_play_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_FF6000"
            android:textSize="@dimen/text_size_20"
            android:text="399"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_99_99_99"
            android:text="起"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_10"
            android:layout_marginLeft="@dimen/size_3"
            />
    </LinearLayout>
</RelativeLayout>