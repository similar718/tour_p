<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_vehicle_item_bg"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_60"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统检测到，您有正在出行的队伍， 是否需要在景区地图显示成员位置？"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_14"
                android:layout_centerHorizontal="true"
                android:drawablePadding="@dimen/dp_4"
                android:gravity="center_vertical"
                android:lineSpacingExtra="@dimen/dp_4"
                />
            <TextView
                android:id="@+id/tv_show_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/scenic_spot_map_item_route_line_right_icon_un"
                android:layout_below="@+id/tv_title"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6"
                android:drawablePadding="@dimen/dp_6"
                android:text="近期不再显示"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/color_999999"
                android:gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:orientation="horizontal"
                android:layout_below="@id/tv_show_status"
                android:layout_marginTop="@dimen/dp_12"
                android:weightSum="2">
                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="不显示"
                    android:textColor="@color/color_24A4FF"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_17"
                    android:layout_marginRight="@dimen/dp_6"
                    android:background="@drawable/radius_gray_f4_bg"
                    />
                <TextView
                    android:id="@+id/tv_sure"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="显示成员"
                    android:textColor="@color/color_FF_FF_FF"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:textSize="@dimen/text_size_17"
                    android:background="@drawable/group_editor_save_blue_bg"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>