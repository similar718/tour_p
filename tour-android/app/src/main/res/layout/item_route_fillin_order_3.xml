<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="item"
            type="cn.xmzt.www.route.bean.ContactForm"/>

    </data>
    <LinearLayout android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white">
            <TextView
                android:id="@+id/tv_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="10dp"
                tools:text="成人1"
                android:text="@{item.indexName}"
                android:textStyle="bold"
                android:textColor="@color/color_24A4FF"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/tv_must"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/tv_index"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="26dp"
                android:text="*"
                android:textColor="#FF6000"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/tv_must"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_vertical"
                android:ems="5"
                android:textStyle="bold"
                tools:text="欧阳兰兰"
                android:text="@{item.name}"
                android:textColorHint="@color/color_99_99_99"
                android:textColor="@color/color_33_33_33"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/tv_must"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:hint="请务必保证所填写出项与出游人所持证件一致"
                tools:visibility="gone"
                android:visibility="@{item.name==null?View.VISIBLE:View.GONE}"
                android:textColorHint="@color/color_99_99_99"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/tv_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_card"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_5"
                android:visibility="@{item.name==null?View.GONE:View.VISIBLE}"
                tools:text="手机号 13027968888"
                android:text="@{item.phoneName}"
                android:textColor="@color/color_99_99_99"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/tv_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/tv_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_phone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_toRightOf="@+id/tv_index"
                android:layout_below="@+id/nameLayout"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_5"
                android:visibility="@{item.name==null?View.GONE:View.VISIBLE}"
                tools:text="身份证 445465457898809837"
                android:text="@{item.idCardName}"
                android:textColor="@color/color_99_99_99"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"/>
            <View android:id="@+id/viewLine"
                android:layout_width="0dp"
                android:layout_height="1px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/tv_index"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/dp_26"
                android:background="@color/color_line"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View android:id="@+id/viewBottomC"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:background="@drawable/route_list_item_bg_bottom_c_shape"/>
    </LinearLayout>

</layout>