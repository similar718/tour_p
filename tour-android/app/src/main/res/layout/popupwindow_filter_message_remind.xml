<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <cn.xmzt.www.view.AutofitRecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8" />
        <View
            android:layout_marginBottom="-1px"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="16sp"
            android:layout_gravity="bottom"
            android:background="@color/color_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal">
            <TextView android:id="@+id/tv_retry"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="重置"
                android:textColor="@color/color_66_66_66"
                android:textSize="16sp" />

            <TextView android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_49_BE_FF"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/color_FF_FF_FF"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
    <View android:id="@+id/fillView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#A0000000"/>
</LinearLayout>