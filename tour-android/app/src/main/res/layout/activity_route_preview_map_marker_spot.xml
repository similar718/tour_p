<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="141dp"
    android:layout_height="63dp"
    android:background="@drawable/preview_scenic_spot_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="19dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_scenic_spot"
            android:layout_width="46dp"
            android:layout_height="@dimen/dp_39"
            android:visibility="visible"
            android:src="@drawable/hotel1" />
        <TextView android:id="@+id/tv_scenic_spot_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="14sp"
            android:singleLine="true"
            android:gravity="center"
            android:ellipsize="end"
            android:maxWidth="@dimen/dp_100"
            tools:text="华侨城肯定是飞机看得见风了开始放假独守空房"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_del"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="1dp"
        android:layout_gravity="right|top"
        android:src="@drawable/icon_del_gray" />

</FrameLayout>