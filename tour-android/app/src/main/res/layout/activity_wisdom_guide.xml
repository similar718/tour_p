<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <variable
            name="activity"
            type="cn.xmzt.www.selfdrivingtools.activity.WisdomGuideActivity" />
        <variable
            name="model"
            type="cn.xmzt.www.selfdrivingtools.viewmodel.WisdomGuideViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <!-- 底部banner和数据信息 -->
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <net.jg.framework.view.JudgeNestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_F4_F4_F4"
                android:orientation="vertical">
                <!-- 顶部背景 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_185"
                    android:background="@drawable/activity_wisdom_guide_top_gradient_bg"
                    />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dp_50"
                            >
                            <!-- banner控件 -->
                            <cn.xmzt.www.view.banner.BannerLayout
                                android:id="@+id/banner"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_150"
                                app:autoPlaying="true"
                                app:centerScale="1.2"
                                app:itemSpace="11"
                                app:moveSpeed="1.0"/>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_tour_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/banner"
                                android:layout_margin="@dimen/size_10"
                                />
                            <RelativeLayout
                                android:id="@+id/rl_empty"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone"
                                android:layout_below="@+id/banner">
                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    >
                                    <ImageView
                                        android:id="@+id/iv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_80"
                                        android:src="@drawable/wisdom_empty_icon"
                                        android:layout_centerHorizontal="true"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="附近没有相关景区哦~"
                                        android:layout_below="@+id/iv"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="@dimen/dp_36"
                                        android:textSize="@dimen/text_size_16"
                                        android:textColor="@color/color_999999"
                                        />
                                </RelativeLayout>
                            </RelativeLayout>
                        </RelativeLayout>
            </RelativeLayout>
        </net.jg.framework.view.JudgeNestedScrollView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        <RelativeLayout
            android:id="@+id/cl_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:background="@color/transparent">
            <ImageView
                android:id="@+id/title_back_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/dp_14"
                android:layout_centerVertical="true"
                android:onClick="@{activity::onClick}"
                android:src="@drawable/icon_new_back_white"/>
            <!-- 搜索 -->
            <TextView
                android:id="@+id/widom_guide_search_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:drawableStart="@drawable/icon_search"
                android:drawableLeft="@drawable/icon_search"
                android:drawablePadding="@dimen/size_5"
                android:hint="输入景区/城市搜索"
                android:onClick="@{activity::onClick}"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_15"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/title_back_iv"
                android:background="@drawable/search_bg_shape"
                android:textColor="@color/color_99_99_99"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_20"
                android:textSize="14sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_voice_start_play_show"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:visibility="gone"
            android:background="@color/color_CC333333"
            android:layout_below="@+id/cl_top"
            android:onClick="@{activity::onClick}"
            >
            <ImageView
                android:id="@+id/play_show_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/scenic_spot_play_show_anim"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                />
            <TextView
                android:id="@+id/tv_voice_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="正在为您播放“东江湖风景区”语音导游"
                android:textColor="@color/color_24A4FF"
                android:textSize="@dimen/text_size_12"
                android:layout_toRightOf="@+id/play_show_iv"
                android:layout_marginLeft="@dimen/dp_16"
                />

            <ImageView
                android:id="@+id/play_show_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/map_voice_cancel"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/dp_20"
                android:paddingLeft="@dimen/dp_20"
                android:onClick="@{activity::onClick}"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_bottom_already_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentBottom="true"
            android:background="@drawable/wisdom_bottom_gradient"
            android:visibility="gone"
            android:onClick="@{activity::onClick}"
            >
            <TextView
                android:id="@+id/tv_already_into_scenic_spot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您已经入东江湖景区"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/color_FF_FF_FF"
                android:textSize="@dimen/text_size_14"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxWidth="@dimen/dp_200"
                />

            <TextView
                android:id="@+id/tv_already_into_scenic_spot_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击进入导览"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/color_fff700"
                android:textSize="@dimen/text_size_14"
                android:layout_toRightOf="@+id/tv_already_into_scenic_spot"
                />
            <ImageView
                android:id="@+id/iv_hide_show"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/map_voice_cancel"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/dp_16"
                android:paddingLeft="@dimen/dp_16"
                android:onClick="@{activity::onClick}"
                />
        </RelativeLayout>
    </RelativeLayout>
</layout>