<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="@dimen/dp_170"
        android:layout_height="@dimen/dp_102"
        android:background="@drawable/shared_navigation_infowindow_car_bg"
        android:layout_centerHorizontal="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_user_head_img"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:src="@drawable/map_marker_offline_person_head_icon"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_9"
            />
        <TextView
            android:id="@+id/maker_nick_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="134****1206"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/color_999999"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_toRightOf="@+id/iv_user_head_img"
            android:singleLine="true"
            android:ellipsize="end"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/maker_car_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粤ZF0238"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_12"
            android:textStyle="bold"
            android:textColor="@color/color_FF_FF_FF"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_toRightOf="@+id/iv_user_head_img"
            android:layout_below="@+id/maker_nick_name_tv"
            android:layout_marginRight="@dimen/dp_11"
            android:background="@drawable/marker_shared_navigation_map_car_info_offline_bg"/>

        <LinearLayout
            android:id="@+id/rl_update_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_user_head_img"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_11"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/infowindow_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="离线"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/color_FF_FF_FF"
                android:singleLine="true"
                android:ellipsize="end"
                android:background="@drawable/infowindow_shared_navigation_map_offline_type_bg"
                />
            <TextView
                android:id="@+id/tv_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2分钟前更新"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/color_999999"
                android:layout_toRightOf="@+id/tv_update_line"
                android:layout_marginLeft="@dimen/dp_9"
                android:singleLine="true"
                android:ellipsize="end"
                />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>